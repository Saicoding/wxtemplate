/* pages/index/about.wxss */

.app {
  width: 100%;
  height: auto;
  overflow: hidden;
}

.swiper {
  height: 380rpx;
}

.slide-image {
  width: 100%;
  height: 380rpx;
}

.title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
  border-bottom: 1rpx #f5f5f5 solid;
  background: #fff;
}

.htitle {
  font-size: 30rpx;
  font-weight: bold;
}

.baseinfo {
  width: 92%;
  height: auto;
  padding: 15rpx 4%;
  background: #fff;
}

.baseinfo .entry {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  color: #8a8a8a;
  font-size: 26rpx;
}

.callphone {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 15rpx;
  font-size: 26rpx;
  background: #404040;
  text-align: center;
  border-radius: 10rpx;
  color: #fff;
}

.content {
  width: 100%;
  height: auto;
  line-height: 40rpx;
  font-size: 28rpx;
  margin: 20rpx 0;
}

.address {
  width: 92%;
  height: auto;
  line-height: 50rpx;
  padding: 0 4%;
  color: #8a8a8a;
  background: #fff;
}

.look {
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  float: right;
  margin-right: 4%;
  color: #f00;
}

.ditu {
  width: 96%;
  height: 400rpx;
  padding: 10rpx 2%;
  background: #fff;
}
