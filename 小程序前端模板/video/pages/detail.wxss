/* 发现 视频详情 index.wxss */
page {
  background: #fff;
}

.app {
  width: 100%;
  height: auto;
  font-size: 28rpx;
  overflow: hidden;
}

.app .content {
  margin: 30rpx;
  margin-bottom: 200rpx;
}

.app .video_container {
  width: 100%;
  height: 500rpx;
}

.reply_container {
  width: 96%;
  padding: 0 2%;
  height: 96rpx;
  border-top: 2px #eee solid;
  position: fixed;
  float: left;
  bottom: 0;
  display: flex;
  background: #f3f3f3;
  flex-direction: row;
}

.reply_input {
  width: 86%;
  height: 60rpx;
  margin-top: 15rpx;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  padding-left: 10rpx;
  padding-top: 8rpx;
  padding-right: 10rpx;
  font-size: 28rpx;
  background: #fff;
  border: 1rpx solid #fff;
  overflow: hidden;
}

.reply_send {
  width: 140rpx;
  height: 50rpx;
  margin-top: 15rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}

.reply_send button {
  font-family: "微软雅黑";
  font-size: 30rpx;
  text-align: center;
  background: #1ba8b9;
  color: #fff;
}


/**相关阅读**/

.reader {
  width: 100%;
  height: auto;
  margin: 30rpx 0;
}

.model_item {
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
}

.model_item .vline {
  width: 10rpx;
  height: 30rpx;
  background: #f00;
}

.model_item text {
  margin-left: 12rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.fx_img_text {
  width: 100%;
  height: auto;
  border-bottom: 1px #eee solid;
  padding: 15rpx 0;
  display: flex;
}
.fx_img_text .item{
  width: 160rpx;
  float: left;
  margin-left: 10rpx;
  position: relative;
}
.fx_img_text .item .title{
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #fff;background: rgba(0,0,0,.8);
  position: absolute;
  overflow: hidden;
  width: 100%;
  bottom: 0;left: 0; 
}

.fx_img_text image {
  width:100%;
  margin-right: 2%;
  height: 160rpx;
}

.bottom_info {
  font-size: 22rpx;
  color: #999;
  font-family: "微软雅黑";
  margin: 15rpx 16rpx;
}

.bottom_info .author {
  padding-right: 20rpx;
  padding-top: 10rpx;
}

.bottom_info .comment {
  padding-right: 20rpx;
}

