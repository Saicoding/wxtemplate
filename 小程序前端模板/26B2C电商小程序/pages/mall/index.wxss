.menu {
  height: 80rpx;
  background: #fff;
  width: 100%;
  position: relative;
  margin-top: 20rpx;
  border-top: 1rpx solid #e2e2e2;
  border-bottom:  1rpx solid #e2e2e2;
}
.catpic,.orderpic,.dwpic{
  font-size: 26rpx;
  margin-left: 10rpx;
}

.menu .cat,.menu .dingwei,.menu .order{
  float: left;
  width: 50%;
  text-align: center;
  line-height: 80rpx;
}

.menu .catlist{
  background: #fff;
  height: 400rpx;
  position: absolute;
  width: 100%;
  z-index: 100;
  top: 82rpx;
  left: 0rpx;
  border-bottom:  1rpx solid #e2e2e2;
  overflow: hidden;
}

.menu .catlist .lt{
  float: left;
  width: 20%;
  height: 400rpx;
  overflow-y: scroll;
  padding-left: 2%;
  border-right: 1rpx solid #f2f2f2; 
}
.menu .catlist .lt view{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  border-bottom:  1rpx solid #f2f2f2;
}

.menu .catlist .rt{
  float: left;
  width: 74%;
  margin-left: 2%;
  overflow-y: scroll;
  height: 400rpx;
}
.addr{
  width: 96rpx;overflow: hidden;
  height: 60rpx;
  float: left;
  margin-left: 50rpx;
}
.menu .catlist .rt text{
  padding: 10rpx;
  float: left;
  border-radius: 10rpx;
  border:1rpx solid #f2f2f2;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.orderlist{
  position: absolute;
  height: 196rpx;
  width: 33.3%;
  right: 0rpx;
  top: 82rpx;
  border-right: 1rpx solid #f2f2f2;
  border-bottom:  1rpx solid #f2f2f2;
  background: #fff;
  line-height: 40rpx;
  text-align: center;
  z-index: 100;
}
.orderlist view{
    border-bottom:  1rpx solid #f2f2f2;
}

.content{
  width: 100%;
  height: auto;
  overflow: hidden;
}

.content .list{
  width: 92%;
  height: auto;
  padding: 0 4%;
  margin-top: 20rpx;
}
.content .list .item{
  width: 50%;
  height: auto;
  background: #fff;
  padding-bottom: 20rpx;
  position: relative;
  float: left;
}

.content .list .item .bdrt{
  width: 1rpx;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
  border-right: 1rpx solid #e2e2e2;
}
.content .list .item .bdbt{
  width: 100%;
  height: 1rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  border-bottom: 1rpx solid #e2e2e2;
}

.content .list .item image{
  width: 100%;
  height: 240rpx;
}
.content .list .item .name{
  width: 96%;
  height: 40rpx;
  overflow: hidden;
  line-height: 40rpx;
  margin: 0 auto;
  font-size: 26rpx;
}

.content .list .item .info{
  width: 96%;
  height: 40rpx;
  overflow: hidden;
  line-height: 40rpx;
  margin: 0 auto;
  font-size: 24rpx;
}
.content .list .item .price{
  color: red;
  font-weight: bold;
  font-size: 28rpx;
  float: left;
}
.content .list .item .gouwu{
  font-size: 38rpx;
  float: right;
  margin-right: 10rpx;
}

/** 修正商品列表信息*/
.list {
  width: 96%;
  height: auto;
  padding: 0 2%;
  padding-top: 5rpx;
  padding-bottom: 20rpx;
  overflow: hidden;
}

.sitem {
  width: 47.3%;
  height: auto;
  margin: 0 1%;
  padding: 15rpx 0;
  margin-top: 15rpx;
  float: left;
  background: #fff;
  border: 1rpx #f5f5f5 solid;
}

.sitem .thumbnail {
  width: 92%;
  height: 180rpx;
  margin: 0 4%;
}

.sitem .thumbnail image {
  width: 100%;
  height: 100%;
}

.sitem .name {
  width: 92%;
  height: 70rpx;
  line-height: 35rpx;
  margin: 0 4%;
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #000;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box !important;
  word-break: break-all;
}

.sitem .info {
  width: 92%;
  height: 40rpx;
  line-height: 40rpx;
  margin: 0 4%;
  margin-top: 10rpx;
  overflow: hidden;
  display: inline-flex;
}

.sitem .info .price {
  width: 50%;
  height: auto;
  text-align: left;
  float: left;
  font-size: 28rpx;
  color: #f00;
}

.sitem .info .pay {
  width: auto;
  min-width: 50%;
  height: auto;
  text-align: right;
  float: right;
}

.sitem .info .pay text {
  width: 40rpx;
  height: 40rpx;
  padding: 5rpx 15rpx;
  border-radius: 8rpx;
  color: #fff;
}
