/* pages/about/index.wxss */
.swiper {
  height: 380rpx;
}

.slide-image {
  width: 100%;
  height: 380rpx;
}

.baseinfo{
  width: 92%;
  height: auto;
  background: #fff;
  padding: 20rpx 4%;
  overflow: hidden;
  margin-top: 20rpx;
}

.baseinfo .address,.baseinfo .busihours,.baseinfo .contact{
  width: 100%;
  height: 60rpx;
  float: left;
}

.icon{
  width: 30rpx;
  height: 30rpx;
  margin: 15rpx 0;
  float: left;
}

.info{
  width: 92%;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  font-size: 30rpx;
  margin-left: 15rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.introduce{
  width: 92%;
  height: auto;
  padding: 0 4%;
  margin-top: 20rpx;
  background: #fff;
  overflow: hidden;
}

.introduce .title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-bottom: 1rpx #f5f5f5 solid;
}

.introduce .vline{
  width: 8rpx;
  height: 40rpx;
  margin: 20rpx 0;
  background: #A1D5D4;
  margin-right: 10rpx;
  float: left;
}

.introduce .content{
  width: 100%;
  height: auto;
  line-height: 46rpx;
  font-size: 26rpx;
  margin: 15rpx 0;
  color: #000;
}

.service{
  width: 94%;
  height: auto;
  padding: 40rpx 3%;
  margin: 30rpx 0;
  background: #fff;
  overflow: hidden;
}

.service .title01{
  text-align: center;
  font-size: 28rpx;
  color: #A0D6D5;
}

.service .title02{
  text-align: center;
  font-size: 22rpx;
  margin-bottom: 30rpx;
  color: #8a8a8a;
}

.service .serblock{
  width: 40%;
  height: 60rpx;
  line-height: 60rpx;
  background: #f00;
  margin: 10rpx 5%;
  text-align: center;
  font-size: 26rpx;
  border-radius: 10rpx;
  float: left;
  color: #fff;
}

.intrtitle{
  width: auto;
  height: auto;
  margin-left:20rpx;
  font-size:24rpx;
  color:#8a8a8a;
}

