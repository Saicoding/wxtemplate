/* pages/index/activity.wxss */

.app {
  width: 100%;
  height: auto;
  overflow: hidden;
  font-size: 28rpx;
}

.app .item {
  width: 90%;
  height: auto;
  margin: 15rpx 3%;
  padding: 15rpx 2%;
  background: #fff;
  border-radius: 12rpx;
}

.app .gray {
  width: 90%;
  height: auto;
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  -ms-filter: grayscale(100%);
  -o-filter: grayscale(100%);
}

.app .item image {
  width: 100%;
  height: 380rpx;
  margin-top: 10rpx;
}

.app .item .title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}

.app .item .title .hui {
  width: auto;
  height: 30rpx;
  line-height: 30rpx;
  margin: 13rpx 0;
  border: 1rpx #8a8a8a solid;
  color: #8a8a8a;
  padding: 2rpx 6rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  float: left;
}

.app .item .title .name {
  width: 75%;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 15rpx;
  font-size: 30rpx;
  font-weight: bold;
  float: left;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.app .item .title .state {
  width: auto;
  height: 30rpx;
  line-height: 30rpx;
  float: left;
  font-size: 26rpx;
  margin: 15rpx 0;
  padding: 2rpx 8rpx;
  border: 1rpx #f00 solid;
  border-radius: 6rpx;
  color: #f00;
}

.app .item .date {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
}

.app .item .address {
  width: 100%;
  height: auto;
  line-height: 50rpx;
  font-size: 28rpx;
}

.app .item .location{
  width: 40rpx;
  height: 40rpx;
  margin: 5rpx;
  float: left;
}
