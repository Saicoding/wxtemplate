/* index.wxss */
 .menu{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-bottom: 2rpx #f4f5f6 solid;
}

.menu text {
  float: left;
  width: 20%;
  font-size: 26rpx;
  text-align: center;
}

.order{
  height: auto;
  overflow: hidden;
  background: #fff;
  width: 100%;
  margin-top: 20rpx;
}

.order .lt{
  float: left;
}
.order .rt{
  float: right;
}

.order .title{
   height: 60rpx;
   line-height: 60rpx;
   width: 96%;
   margin: 0 auto;
}
.order  .product{
  width: 96%;
  height: auto;
  overflow: hidden;
  margin: 0 auto;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
}
.product image{
  width: 100rpx;
  height: 100rpx;
  float: left;
}
.product .rt{
  float: right;
  width: 600rpx;
}
.product .price{
  float: right;
  color: red;
}
.product .tit{
  line-height: 36rpx;
  height: auto;
  overflow: hidden;
}

.product .info{
  height: 40rpx;
  line-height: 40rpx;
  color: #666;
}

.product .num{
  float: right;
}
.status{
  height: 100rpx;
}

.btn{
  float: right;
  margin-right: 20rpx;
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  border:1rpx solid #e2e2e2;
  color: #666;
}