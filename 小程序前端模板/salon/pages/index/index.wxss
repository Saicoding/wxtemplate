/**index.wxss**/

.swiper {
  height: 380rpx;
}

.slide-image {
  width: 100%;
  height: 380rpx;
}

.address {
  width: 92%;
  height: auto;
  padding: 15rpx 4%;
  background: #fff;
  overflow: hidden;
}

.address .lt {
  width: 82%;
  height: auto;
  float: left;
  line-height: 40rpx;
}

.address .lt .name {
  width: auto;
  height: auto;
  font-size: 32rpx;
  font-weight: bold;
}

.address .lt .distance {
  width: auto;
  height: auto;
  font-size: 22rpx;
  font-weight: 100;
  margin-left: 12rpx;
  color: #bdbdbd;
}

.address .lt .info {
  width: 100%;
  height: auto;
  margin-top: 12rpx;
  background: #f00;
}

.address .lt .info .icon {
  width: 36rpx;
  height: 36rpx;
  margin-top: 2rpx;
  float: left;
}

.address .lt .info .addr_info {
  width: 90%;
  height: 40rpx;
  line-height: 40rpx;
  margin-left: 10rpx;
  float: left;
  font-size: 22rpx;
}

.address .rt {
  width: 18%;
  height: auto;
  float: right;
  text-align: center;
}

.address .rt image{
  width: 45rpx;
  height: 45rpx;
  margin-top: 6rpx;
}

.address .rt .dh{
  width: auto;
  height: auto;
  font-size: 24rpx;
  color: #bdbdbd;
}

.title{
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  color: #bdbdbd;
  text-align: center;
}

.item{
  width: 92%;
  height: 340rpx;
  background: #fff;
  margin: 0 4%;
  margin-top: 20rpx;
  box-shadow: 2px 2px 1px #EAEAEA;
  border-radius: 0  0 10rpx 10rpx;
  
}

.item .tview{
  width: 100%;
  height: 160rpx;
  /* background: rgba(255, 239, 219, 0.3); */
  background: #F7EDED;
  overflow: hidden;
  display:  flex;
}

.item .tview .face{
  width: 126rpx;
  height: 126rpx;
  margin: 16rpx;
  border-radius: 63rpx;
  border: 3rpx #fff solid;
  float: left;
}

.item .tview .face image{
  width: 126rpx;
  height: 126rpx;
  border-radius: 63rpx;
}

.item .tview .lt{
  width: 50%;
  height: 160rpx;
  margin-left: 20rpx;
  float: left;
}

.item .tview .lt .name{
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 30rpx;
  font-size: 32rpx;
  text-align: left;
  color: #8B2500;
}

.item .tview .lt .position{
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  text-align: left;
  color: #8B2500;
}

.item .tview .rt{
  width: 26%;
  height: 160rpx;
  float: left;
}

.item .tview .rt .price{
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 30rpx;
  font-size: 40rpx;
  text-align: center;
  color: #f00;
}

.item .tview .rt .alert{
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  color: #8B2500;
}

item .bview{
  width: 100%;
  height: 180rpx;
}

.item .bview .bv01{
  width: 100%;
  height: 80rpx;
  margin-top: 10rpx;
}

.item .bv01 .tag{
  width: 120rpx;
  height: 50rpx;
  margin-top: 15rpx;
  line-height: 50rpx;
  float: left;
  margin-left: 10rpx;
  margin-right: 5rpx;
  text-align: center;
  background: #f5f5f5;
  border-radius: 25rpx;
  color: #8a8a8a;
}

.item .bv01 .yuyue{
  width: 180rpx;
  overflow: hidden;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 15rpx;
  margin-right: 20rpx;
  text-align: center;
  color: #fff;
  border-radius: 35rpx;
  background: #99499C;
  float: right;
}

.item .bview .bv02{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
}

.item .bview .bv02 text{
  width: 31.3%;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 2%;
  float: left;
  font-size: 26rpx;
  color: #bdbdbd;
}

