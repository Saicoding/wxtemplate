/* home.wxss */

page {
  background: #f3f3f3;
}

.app {
  font-family: '微软雅黑';
  font-size: 26rpx;
  width: 100%;
  height: auto;
  overflow: hidden;
}

.slide-image {
  width: 100%;
  height: 360rpx;
}

.swiper {
  width: 100%;
  height: 360rpx;
}

.app .ad_header {
  width: 100%;
  height: 100rpx;
  display: flex;
}

.app .ad_header .city {
  width: 20%;
  height: 100rpx;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
}

.app .ad_header .city text {
  color: #8a8a8a;
}

.app .ad_header .city image {
  color: white;
  width: 30rpx;
  height: 30rpx;
  margin-left: 15rpx;
}

.ad_header .search {
  width: 65%;
  height: 80rpx;
  float: left;
  margin: 10rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ad_header .search .content {
  width: 100%;
  height: 60rpx;
  margin: 10rpx 10rpx;
  border-radius: 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
}

.ad_header .search .content text {
  color: #8a8a8a;
  font-size: 26rpx;
}

.ad_header .search .content image {
  width: 28rpx;
  height: 28rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}

.app .ad_header .kefu {
  width: 15%;
  height: 80rpx;
  float: right;
  display: flex;
  justify-content: center;
  align-items: center;
}

.app .ad_header .kefu image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 auto;
}

.swiper-box {
  height: 370rpx;
  background: #fff;
}

.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal {
  padding-bottom: 10rpx;
}

.menu {
  height: auto;
  overflow: hidden;
  width: 100%;
  background: #fff;
  padding-top: 20rpx;
}

.menu .item {
  width: 25%;
  height: 150rpx;
  float: left;
  text-align: center;
}

.menu .item image {
  height: 80rpx;
  width: 80rpx;
  display: block;
  float: left;
}

.menu .item .icon {
  height: 80rpx;
  width: 80rpx;
  margin: 0 auto;
  border-radius: 40rpx;
}

.menu .item  text {
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
  display: block;
  font-size: 26rpx;
}

