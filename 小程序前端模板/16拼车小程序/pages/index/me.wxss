/* pages/index/me.wxss */

.item {
  width: 94%;
  height: auto;
  padding: 15rpx 3%;
  background: #fff;
  border-bottom: 1rpx #f5f5f5 solid;
  margin-top: 1rpx;
  position: relative;
}

.item .title {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
}


.contact {
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 10rpx;
  background: #25b83d;
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  padding: 5rpx 15rpx;
  color: #fff;
  font-size: 26rpx;
}

.item .title .type {
  width: auto;
  height: auto;
  line-height: 50rpx;
  background: #02bdb2;
  color: #fff;
  padding: 8rpx 10rpx;
  margin-right: 15rpx;
}

.item .title .num {
  width: auto;
  height: auto;
  line-height: 50rpx;
  background: #eef0ed;
  color: #515151;
  padding: 8rpx 10rpx;
  margin-right: 15rpx;
}

.item .date, .item .car, .item .remarks {
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 28rpx;
  color: #8a8a8a;
}

.item .route {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.item .info {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}

.item .info .name {
  width: auto;
  height: auto;
  float: left;
  margin-right: 30rpx;
  font-size: 24rpx;
  color: #515151;
}

.item .info .name image {
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin: 10rpx 0;
  margin-right: 8rpx;
}

.item .info .phone {
  float: left;
  font-size: 24rpx;
  color: #515151;
}

.bttview {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 10rpx;
  border-top: 1rpx #f5f5f5 solid;
}

.bttview .greenbtn, .bttview .graybtn {
  width: auto;
  height: 46rpx;
  line-height: 46rpx;
  padding: 0 20rpx;
  margin: 17rpx 0;
  border-radius: 10rpx;
  float: right;
  margin-left: 25rpx;
  border: 1rpx #25b83d solid;
  color: #25b83d;
}

.bttview .graybtn {
  border: 1rpx #bdbdbd solid;
  color: #515151;
}
