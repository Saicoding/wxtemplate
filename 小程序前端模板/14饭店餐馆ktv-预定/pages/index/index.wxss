/**index.wxss**/
.app{
  width: 100%;
  height: auto;
  overflow: hidden;
}

.swiper {
  height: 380rpx;
}

.slide-image {
  width: 100%;
  height: 380rpx;
}

.baseinfo{
  width: 92%;
  height: auto;
  padding: 20rpx 4%;
  background: #fff;
  overflow: hidden;
}

.baseinfo .lt{
  width: 93%;
  height: auto;
  float: left;
}

.name{
  width: 100%;
  height: 50rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  white-space:  nowrap;
  text-overflow:  ellipsis;
  overflow: hidden;
}

.address{
  width: 100%;
  height: 40rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  color: #8a8a8a;
  white-space:  nowrap;
  text-overflow:  ellipsis;
  overflow: hidden;
}

.baseinfo .rt{
  width: 7%;
  height: 90rpx;
  float: right;
  display: flex;
  align-items: center;
}

.baseinfo .rt image{
  width: 40rpx;
  height: 40rpx;
  margin: 25rpx 0;
  text-align: right;
}

.youhuiquan {
  height: 140rpx;
  width: 100%;
  margin-top: 20rpx;
  background: #fff;
  padding: 15rpx 0;
}

.scroll-view_H {
  white-space: nowrap;
}

.scroll-view_H .item {
  display: inline-block;
  width: 390rpx;
  height: 120rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
  border: 1rpx solid #e2e2e2;
  border-radius: 10rpx;
  position: relative;
  border-left: 5rpx solid red;
}

.scroll-view_H .item .lt {
  float: left;
  width: 100rpx;
  line-height: 120rpx;
  color: red;
  text-align: center;
  font-weight: bold;
}

.scroll-view_H .item .ct {
  width: 140rpx;
  float: left;
}

.scroll-view_H .item .ct .name {
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.scroll-view_H .item .ct .man {
  color: #666;
  margin-top: 10rpx;
}

.scroll-view_H .item  .rt {
  float: right;
  width: 100rpx;
  border-left: 3rpx #e2e2e2 dotted;
  height: 100%;
}

.scroll-view_H .item  .rt text {
  padding: 5rpx 10rpx;
  background: red;
  color: #fff;
  border-radius: 10rpx;
  margin-top: 36rpx;
  float: right;
  margin-right: 20rpx;
}


.topyuan, .btyuan {
  position: absolute;
  height: 20rpx;
  width: 20rpx;
  border-radius: 10rpx;
  background: #fff;
  right: 90rpx;
}

.topyuan {
  top: -10rpx;
}

.btyuan {
  bottom: -10rpx;
}

.hot{
  width: 100%;
  height: auto;
  padding: 15rpx 10rpx;
  margin-top: 20rpx;
  background: #fff;
  overflow: hidden;
}

.hot .title{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1rpx #f5f5f5 solid;
}

.htitle{
  font-size: 30rpx;
  font-weight: bold;
}

.box{
  width: 42%;
  height: auto;
  margin: 0 3%;
  margin-top: 20rpx;
  float: left;
}

.box image{
  width: 100%;
  height: 220rpx;
}

.box .bname{
  width: 96%;
  height: 60rpx;
  line-height: 60rpx;
  color: #8a8a8a;
  font-size: 30rpx;
  padding: 0 2%;
  white-space: nowrap;
  text-overflow:  ellipsis;
  overflow: hidden;
}

.box .info{
  width: 100%;
  height: auto;
}

.box .info .price{
  width: 47%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  padding-left: 2%;
  color: #f00;
  float: left;
}

.box .info .xl{
  width: 49%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  padding-left: 2%;
  color: #bdbdbd;
  float: left;
}