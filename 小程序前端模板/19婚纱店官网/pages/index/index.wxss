/**index.wxss**/
.swiper {
  height: 380rpx;
}

.slide-image {
  width: 100%;
  height: 380rpx;
}

.case{
  width: 94%;
  height: auto;
  padding: 0 3%;
  background: #fff;
  margin-top: 20rpx;
}

.title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-bottom: 1rpx #f5f5f5 solid;
}

.vline{
  width: 8rpx;
  height: 40rpx;
  margin: 20rpx 0;
  background: #A1D5D4;
  margin-right: 10rpx;
  float: left;
}

.case .cscroll{
  margin: 15rpx 0;
  width: 98%;
  height: 365rpx;
  overflow: hidden;
  white-space: nowrap; 
}

.case .cscroll .citem{
  width: 300rpx;
  height: 355rpx;
  border-radius: 10rpx;
  margin-left: 15rpx;
  background: #bdbdbd;
  position: relative;
  display: inline-block;
}

.case .cscroll image{
  width: 296rpx;
  height: 315rpx;
  border-radius: 10rpx;
  margin: 0 5rpx;
  margin-top: 5rpx;
}

.case .cscroll .citem .ctitle{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: #6DB7C0;
  color: #fff;
  position: absolute;
  bottom: 0;
  font-size: 24rpx;
}

.service, .classify{
  width: 94%;
  height: auto;
  padding: 20rpx 3%;
  margin-top: 20rpx;
  background: #fff;
  overflow: hidden;
}

.service .title01{
  text-align: center;
  font-size: 28rpx;
  color: #A0D6D5;
}

.service .title02{
  text-align: center;
  font-size: 22rpx;
  color: #8a8a8a;
}

.service .serblock{
  width: 40%;
  height: 60rpx;
  line-height: 60rpx;
  background: #f00;
  margin: 10rpx 5%;
  text-align: center;
  font-size: 26rpx;
  border-radius: 10rpx;
  float: left;
  color: #fff;
}

.classify .clitem{
  width: 46%;
  height: 340rpx;
  float: left;
  margin: 15rpx 2%;
  position: relative;
}

.classify .clitem image{
  width: 100%;
  height: 340rpx;
  border-radius: 10rpx;
}

.classify .clitem .cltitle{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  position: absolute;
  bottom: 0;
  font-size: 24rpx;
}

