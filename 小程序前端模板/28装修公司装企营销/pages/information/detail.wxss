/* pages/information/detail.wxss */
.app{
  width: 100%;
  height: auto;
}

.app .baseinfo{
  width: 92%;
  height: auto;
  padding: 20rpx 3%;
  font-size: 28rpx;
  overflow: hidden;
  background: #fff;
}

.app .baseinfo .title{
  width: 100%;
  height: auto;
  line-height: 40rpx;
  font-size: 30rpx;
}

.app .baseinfo .author{
  width: auto;
  height: auto;
  float: right;
  overflow: hidden;
  font-size: 26rpx;
  color: #8a8a8a;
}

.app .content{
  width: 92%;
  height: auto;
  padding: 20rpx 3%;
  margin-top: 20rpx;
  font-size: 28rpx;
  overflow: hidden; 
  background: #fff;
}

.app .content image{
  width: 100%;
  height: 460rpx;
}

.app .content .section{
  width: 100%;
  height: auto;
  font-size: 28rpx;
  line-height: 40rpx;
}