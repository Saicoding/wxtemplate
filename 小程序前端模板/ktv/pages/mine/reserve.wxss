/* pages/mine/reserve.wxss */

.app {
  width: 100%;
  height: auto;
}

.item{
  width: 92%;
  height: auto;
  padding: 20rpx 4%;
  background: #fff;
  overflow: hidden;
  /* padding-bottom: 20rpx; */
  border-bottom: 1rpx #f5f5f5 solid;
}

.item .lt{
  width: 25%;
  height: 120rpx;
  float: left;
}

.item .lt .thumb{
  width: 140rpx;
  height: 120rpx;
}

.item .rt{
  width: 65%;
  height: 120rpx;
  float: left;
}

.item .rt .title{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #000;
}

.item .rt .uprice{
  height: 30rpx;
  line-height: 30rpx;
  margin-top: 8rpx;
  font-size: 26rpx;
}

.item .arrow{
  width: 10%;
  height: 120rpx;
  float: right;
  text-align: right;
}

.item .arrow image{
  width: 40rpx;
  height: 40rpx;
  text-align: right;
  margin-top: 40rpx;
}

