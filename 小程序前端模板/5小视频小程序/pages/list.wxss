 .menubar {
  height:59rpx;
  background: #fff;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99;
  white-space: nowrap;
  border-bottom: solid 1rpx #f4f5f6;
}

 .menu {
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  background: #fff;
}
.kb{
  height: 60rpx;
}
 .menubar text {
  display: inline-block;
  width: auto;
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
  height: 90%;
  text-align: center;
}

 .menubar text.active {
  color: #1ba8b9;
  border-bottom: solid 4rpx #1ba8b9;
  border-bottom-width: 50rpx;
}


.item{
  width: 100%;
  height: 400rpx;
  margin-top: 20rpx;
  position: relative;
}
.item .banner{
  width: 100%;
  height: 400rpx;
}
.item .title{
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(0,0, 0, .8);
  color: #fff;
  position: absolute;bottom: 0;left: 0;
  font-size: 28rpx;
  width: 100%;
}
.item .look{
  position: absolute;
  right: 0;
  top: 30rpx;
  height: 40rpx;
  background:  rgba(0,0, 0, .7);
  color: #fff;
  font-size: 24rpx;
  line-height: 40rpx;
  border-radius: 10rpx;
}
.item .look image{
  width: 40rpx;
  height: 40rpx;
  float: left;
}
