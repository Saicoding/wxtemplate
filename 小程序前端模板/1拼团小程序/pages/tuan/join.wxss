.top {
  height: auto;
  background: #fff;
  width: 100%;
  overflow: hidden;
  padding-bottom: 20rpx;
}

.product {
  height: auto;
  background: #fff;
  width: 100%;
  overflow: hidden;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.product .img {
  float: left;
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  margin-left: 2%;
}

.product .img image {
  height: 200rpx;
  width: 200rpx;
}

.product .rt {
  height: auto;
  float: left;
  width: 500rpx;
  overflow: hidden;
  margin-left: 10rpx;
}

.product .title {
  height: auto;
  overflow: hidden;
  line-height: 40rpx;
  font-size: 28rpx;
}

.product .title text {
  color: red;
}

.product .price {
  height: 60rpx;
  width: 100%;
}

.product .price .lt {
  float: left;
  margin-top: 20rpx;
  color: red;
  font-size: 30rpx;
  font-weight: bold;
}

.product .price .baoyou {
  float: left;
  margin-top: 10rpx;
  margin-left: 20rpx;
  padding: 10rpx;
  background: red;
  color: #fff;
  border-radius: 10rpx;
}

.product .danmai {
  margin-top: 10rpx;
  color: #666;
}

.bd {
  height: 40rpx;
  width: 100%;
  position: relative;
}

.bd text {
  background: #fff;
  color: #e2e2e2;
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  left: 48%;
  top: -10rpx;
  font-size: 40rpx;
}

.users {
  width: auto;
  margin-top: 40rpx;
  text-align: center;
}

.users .item {
  width: 120rpx;
  height: 120rpx;
  display: inline-block;
  position: relative;
  margin-left: 20rpx;
}

.users .item image {
  height: 120rpx;
  width: 120rpx;
  border-radius: 60rpx;
}

.users .on {
  border-radius: 60rpx;
  border: 1rpx red solid;
  background: rgba(255, 0, 0, 0.6);
}

.users .on text {
  position: absolute;
  top: -20rpx;
  right: 0rpx;
  background: rgba(255, 0, 0, 0.6);
  font-size: 20rpx;
  color: #fff;
  padding: 5rpx 10rpx;
}

.info2 {
  text-align: center;
  margin-top: 20rpx;
  color: red;
}

.join .info {
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
  overflow: hidden;
  font-size: 32rpx;
}

.join .info text {
  color: red;
}

.join .djs {
  width: 90%;
  margin: 0 5%;
  height: 80rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
}

.join .djs .lt, .join .djs .rt {
  height: 1rpx;
  width: 26%;
  background: #e2e2e2;
  float: left;
  margin-top: 20rpx;
}

.join .djs .ct {
  float: left;
  width: 44%;
  text-align: center;
}

.join .djs .ct text {
  padding: 5rpx 10rpx;
  background: #000;
  color: #fff;
}

.yijian {
  height: 68rpx;
  width: 260rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 20rpx;
  border-radius: 20rpx;
  line-height: 68rpx;
  font-size: 26rpx;
  color: #fff;
}

.guizhe {
  height: auto;
  background: #fff;
  width: 100%;
  overflow: hidden;
  margin-top: 20rpx;
}

.guizhe .tit {
  height: 80rpx;
  line-height: 80rpx;
  width: 96%;
  margin: 0 auto;
}

.guizhe .tit .rt {
  float: right;
}

.step {
  height: 100rpx;
  width: 96%;
  margin: 0 auto;
}

.step .step1, .step .step2 {
  width: 30%;
  float: left;
}

.step .step3 {
  width: 40%;
  float: left;
}

.step .step1 .lt, .step .step2 .lt {
  float: left;
}

.step .step1 .lt text, .step .step2 .lt text {
  display: block;
}

.step1 .iconfont, .step2 .iconfont {
  float: right;
  margin-top: 20rpx;
  margin-right: 20rpx;
  font-size: 36rpx;
}

.step3 text {
  display: block;
}

.goback {
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
}

.fanhui {
  width: 400rpx;
  height: 68rpx;
  border-radius: 20rpx;
  text-align: center;
  line-height: 68rpx;
  margin: 0 auto;
  margin-top: 16rpx;
  font-size: 26rpx;
}

.fanhui .iconfont {
  font-size: 36rpx;
  margin-right: 10rpx;
}
