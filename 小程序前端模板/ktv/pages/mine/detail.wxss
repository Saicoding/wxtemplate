/* pages/mine/reserve.wxss */

.item {
  width: 92%;
  height: auto;
  padding: 20rpx 4%;
  margin-top: 20rpx;
  background: #fff;
}

.item .baseinfo{
  width: 100%;
  height: 120rpx;
  overflow: hidden;
  padding-bottom: 20rpx;
  border-bottom: 1rpx #f5f5f5 solid;
}

.item .baseinfo .lt{
  width: 25%;
  height: 120rpx;
  float: left;
}

.item .baseinfo .lt .thumb{
  width: 140rpx;
  height: 120rpx;
}

.item .baseinfo .rt{
  width: 75%;
  height: 120rpx;
  float: right;
}

.item .baseinfo .rt .title{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  margin-top: 5rpx;
  color: #000;
}

.item .baseinfo .rt .uprice{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
}

.item .baseinfo .rt .uprice text{
  font-size: 32rpx;
  margin: 0 8rpx;
}

.item .orderinfo{
  width: 100%;
  height: auto;
  padding: 20rpx 0;
  border-bottom: 1rpx #f5f5f5 solid;
}

.item .orderinfo .state, .item .orderinfo .num{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #8a8a8a;
}

.detail{
  width: 100%;
  height: auto;
  padding: 15rpx 0;
}

.detail .ditem{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}

.ititle{
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  font-size: 28rpx;
  color: #000;
}

.icontent{
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  float: right;
  font-size: 28rpx;
  color: #000;
}
