page {
  background: #f3f3f3;
}

.app {
  font-size: 28rpx;
  height: auto;
  overflow: hidden;
  width: 100%;
}

.header {
  height: 300rpx;
  width: 100%;
  position: relative;
}

.header image {
  width: 100%;
  height: 300rpx;
}

.commpany_title {
  width: 100%;
  color: #000;
  font-size: 32rpx;
  font-weight: bold;
  background: #fff;
  border-bottom: 1rpx #e2e2e2 solid;
  line-height: 50rpx;
  margin-top: 10rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.commpany_title text {
  width: 96%;
  margin-left: 2%;
  text-align: center;
}

.header .num {
  position: absolute;
  background: rgba(0, 0, 0, 0.5);
  right: 20rpx;
  bottom: 20rpx;
  border-radius: 10rpx;
  color: #fff;
  font-size: 26rpx;
  padding: 10rpx;
  z-index: 100;
}

.col {
  height: 80rpx;
  padding-top: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #e2e2e2;
  padding-bottom: 10rpx;
}

.col .left {
  float: left;
  color: #000;
  width: 20%;
  text-align: center;
  margin-top: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.col .big {
  font-size: 40rpx;
}

.col .center {
  width: 70%;
  text-align: left;
  float: left;
  margin-top: 10rpx;
}

.col image {
  float: right;
  width: 30rpx;
  height: 30rpx;
  margin-right: 5rpx;
  margin-top: 10rpx;
}

.nodata {
  height: 400rpx;
  width: 100%;
}

.nodata image {
  height: 200rpx;
  width: 200rpx;
  display: block;
  margin: 0 auto;
  margin-top: 50rpx;
}

.nodata text {
  display: block;
  margin: 0 auto;
  margin-top: 20rpx;
  color: #1ba8b9;
  font-size: 28rpx;
  text-align: center;
}

.taocan {
  height: auto;
  background: #fff;
  overflow: hidden;
  margin-top: 20rpx;
  border-bottom: 1rpx #e2e2e2 solid;
}

.riqi_scroll {
  white-space: nowrap;
  height: 100rpx;
  border-bottom: 1rpx solid #e2e2e2;
}

.taocan .item {
  width: 100rpx;
  height: 80rpx;
  display: inline-block;
  margin-left: 10rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
}

.taocan .item text {
  display: block;
  line-height: 40rpx;
  text-align: center;
}

.taocan .on {
  background: #ff8c00;
  color: #fff;
  border-radius: 10rpx;
}

.titem {
  height: auto;
  padding-bottom: 20rpx;
  overflow: hidden;
  width: 96%;
  margin-left: 2%;
  padding-top: 20rpx;
  display: flex;
}

.titem image {
  width: 28rpx;
  height: 20rpx;
}

.titem .lt {
  width: 80%;
}

.titem .rt {
  width: 20%;
}

.titem .yuding {
  background: #ff8c00;
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  border-radius: 10rpx;
  text-align: center;
  float: left;
  margin-top: 50rpx;
}

.titem .title {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.titem .quxiao {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.price {
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
}

.price .lt {
  width: auto;
  margin-right: 10rpx;
  font-size: 30rpx;
  color: red;
  font-weight: bold;
}

.price .ct {
  font-size: 24rpx;
  color: #666;
}

.photoshow {
  height: 100%;
  width: 100%;
  overflow: hidden;
  position: fixed;
  z-index: 1000;
  top: 0;
  left: 0;
}

.photoshow .bg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: #000;
  opacity: 0.8;
}

.photoshow .sw {
  position: absolute;
  width: 100%;
  height: 500rpx;
  left: 0;
  top: 300rpx;
  z-index: 1002;
}

.photoshow .sw_item {
  display: block;
  height: 500rpx;
}

.photoshow .sw_item image {
  width: 100%;
  height: 500rpx;
}

.tanchuan {
  height: 100%;
  width: 100%;
  overflow: hidden;
  position: fixed;
  z-index: 1000;
  top: 0;
  left: 0;
}

.tanchuan .main {
  position: absolute;
  height: 80%;
  width: 80%;
  top: 10%;
  left: 10%;
  z-index: 1000;
  overflow: hidden;
  background: #fff;
  border-radius: 20rpx;
}

.tanchuan .title {
  height: 80rpx;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  border-bottom: 1rpx solid #e2e2e2;
  font-size: 30rpx;
  font-weight: bold;
  color: #000;
}

.tanchuan .content {
  width: 96%;
  margin-left: 2%;
  height: 80%;
  overflow-y: scroll;
}

.tanchuan .content .photo {
  width: 100%;
  height: 250rpx;
}

.tanchuan .content .photo image {
  width: 100%;
  height: 250rpx;
}

.tanchuan .content .tt {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #e2e2e2;
}

.tanchuan .content .duan {
  height: auto;
  margin-top: 30rpx;
  font-size: 24rpx;
  line-height: 40rpx;
}

.tanchuan .content .duan .tt2 {
  color: #ff8c00;
  font-size: 26rpx;
}

.tanchuan .content .duan .con {
  width: 96%;
  display: block;
  margin-left: 2%;
  margin-top: 20rpx;
}

.tanchuan .title .rt {
  margin-right: 20rpx;
}

.tanchuan .title .rt image {
  width: 30rpx;
  height: 30rpx;
}

.tanchuan .bottom {
  border-top: 1rpx solid #e2e2e2;
  width: 100%;
  height: 80rpx;
  position: absolute;
  bottom: 0;
  line-height: 80rpx;
  font-size: 26rpx;
}

.tanchuan .bottom .lt {
  width: 50%;
  text-align: center;
  color: red;
}

.tanchuan .bottom .lt text {
  font-size: 36rpx;
  font-weight: bold;
}

.tanchuan .bottom .rt {
  width: 50%;
  background: #ff8c00;
  text-align: center;
  color: #fff;
}

.tanchuan .bg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: #000;
  opacity: 0.8;
}

.xuzhi {
  width: 100%;
  padding-bottom: 20rpx;
  background: #fff;
  margin-top: 20rpx;
}

.xuzhi .title {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #e2e2e2;
  width: 96%;
  margin-left: 2%;
  font-size: 32rpx;
}

.xuzhi .duan {
  width: 96%;
  margin-left: 2%;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #666;
  margin-top: 20rpx;
}

.xuzhi .duan .con {
  width: 96%;
  margin-left: 2%;
}

.xuzhi .duan .tt2 {
  font-size: 26rpx;
  font-weight: bold;
}
