/**index.wxss**/
.slide-image{
  width: 100%;
  height: 360rpx;
}

.module{
  width: 96%;
  height: auto;
  padding: 20rpx 2%;
  background: #fff;
  margin: 20rpx 0;
  overflow: hidden;
}

.module .item{
  width: 33%;
  height: 220rpx;
  position: relative;
  float: left;
}

.module .item .image{
  width: 60rpx;
  height: 60rpx;
  margin: 30rpx auto;
}

.module .item .name{
  width: 100%;
  height: auto;
  font-size: 28rpx;
  text-align: center;
}