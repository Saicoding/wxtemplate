/* index.wxss */

.header{
  height: 200rpx;
  width: 100%;
  background:-webkit-gradient(linear, 0 0, 0 bottom, from(#FF6666), to(rgba(255, 102, 102, 0.5)));  
  position: relative;
}


.ruzhu{
  position: fixed;
  left: 10rpx;
  bottom: 150rpx;
  z-index: 1000;
  height: 80rpx;
  width: 80rpx;
  background: rgba(0,0, 0, .8);
  border-radius: 40rpx; 

}
.ruzhu image{
  height: 60rpx;
  width: 60rpx; 
  display: block;
  float: left;
  margin-left: 10rpx;
  margin-top: 10rpx;
}
.search{
    width: 80%;
    height: 80rpx;
    background: #fff;
    border-radius: 20rpx;
    position: absolute;
    left: 10%;
    top: 40rpx; 
    z-index: 1000;
    overflow: hidden;
}

.search button{
  float: right;
  width: 30%;
  border: 0;
  height: 80rpx;
  border-radius: 20rpx; margin-right: -2rpx;
  background:#fff; 
  font-size: 26rpx;
  line-height: 80rpx;
}

.search input{
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  margin-left: 5%;
  float: left;
}

#clouds2 {
  position: relative;
  z-index: 2;
}

.cloud1, .cloud2, .cloud3 { 
  opacity: 0.5;  
}

.cloud1 {
  width: 150rpx;
  height: 40rpx;
  background: #fff;
  position: absolute;
  top: 80rpx;
  border-radius: 200rpx;
}



.cloud1:after {
  content: '';
  position: absolute;
  background: #fff;
  width: 60rpx;
  height: 60rpx;
  top: -20rpx;
  left: 20rpx;
  border-radius: 200rpx;
}
.cloud1:before {
  content: '';
  position: absolute;
  background: #fff;
  width: 80rpx;
  height: 80rpx;
  top: -40rpx;
  right: 10rpx;
  border-radius: 200rpx;
}

.cloud2 {
  width: 100rpx;
  height: 40rpx;
  background: #fff;
  position: absolute;
  top: 140rpx;
  left:300rpx;
  border-radius: 200rpx;
}
.cloud2:after {
  content: '';
  position: absolute;
  background: #fff;
  width: 40rpx;
  height: 40rpx;
  top: -10rpx;
  left: 20rpx;
  border-radius: 200rpx;
}
.cloud2:before {
  content: '';
  position: absolute;
  background: #fff;
  width: 50rpx;
  height: 50rpx;
  top: -15rpx;
  right: 10rpx;
  border-radius: 200rpx;
}


.cloud3 {
  width: 150rpx;
  height: 40rpx;
  background: #fff;
  position: absolute;
  top: 90rpx;
  right: 10rpx;
  border-radius: 200rpx;
}
.cloud3:after {
  content: '';
  position: absolute;
  background: #fff;
  width: 60rpx;
  height: 60rpx;
  top: -20rpx;
  left: 20rpx;
  border-radius: 200rpx;
}
.cloud3:before {
  content: '';
  position: absolute;
  background: #fff;
  width: 80rpx;
  height: 80rpx;
  top: -40rpx;
  right: 10rpx;
  border-radius: 200rpx;
}

.main{
  width: 100%;
}

.select{
  width: 100%;
  height: 80rpx;
  background: #fff;
  font-size: 26rpx;
  border-bottom: #e2e2e2 1rpx solid;  
  position: relative;
}

.select .item{
  width: 33.3%;
  float: left;
  height: 80rpx;
  text-align: center;
}
.select .item .cate{
  line-height: 80rpx;
  float: left;
  margin-left: 20%;
}

.select .item image{
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-left: 20rpx;
  margin-top: 25rpx;
}

.catelist{
  position: absolute;
  top: 82rpx;
  left: 0rpx;
  width: 100%;
  height: auto;
  overflow: hidden;
  z-index: 1000;
  background: #fff;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e2e2e2;
}

.catelist .lt{
  width: 20%;
  float: left;
  font-size: 26rpx;
    height: 300rpx;
  border-right: 1rpx solid #e2e2e2;
  text-align: right;
}

.catelist .rt text{
  float: left;
  display: block;
  border:1rpx  solid #e2e2e2;
  height: 50rpx;
  width: 100rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-left: 10px;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.catelist .rt .on{
  color: #FF6666; 
    border:1rpx  solid #FF6666;

}

.catelist .lt text{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
  display: block;

}
.catelist .lt .on{
  color: #FF6666; 
}
.catelist .rt{
  width: 70%;
  float: left;
  margin-left: 5%;
  height: 300rpx;
  overflow-y: scroll;
}




.arealist{
  position: absolute;
  top: 82rpx;
  left: 0rpx;
  width: 100%;
  height: auto;
  overflow: hidden;
  z-index: 1000;
  background: #fff;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e2e2e2;
}
.arealist text{
  color: #000;
  font-size: 24rpx;
  border: 1rpx solid #f3f3f3;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  float: left;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.orderlist{
  position:  absolute;
  width: 33.3%;
  right: 0.1%;
  top:82rpx;
  text-align: center;
  background: #fff;
  padding-bottom: 20rpx;
  line-height: 40rpx;
  font-size: 24rpx;
    border-bottom: 1rpx solid #e2e2e2;

}
.orderlist view{
  border-bottom: 1rpx solid #f2f2f2;
  margin-top: 20rpx;
}

