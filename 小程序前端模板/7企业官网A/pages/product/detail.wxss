.page{
  min-height: 1000rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}


.duanluo{
   width: 96%;
   margin-left: 2%;
   line-height: 30rpx;
   display: inline-block;
}

.duanluo image{
  max-width: 100%;
  margin-top: 10rpx;
}


.item{
  height: 200rpx;
  margin-top: 20rpx;
  overflow: hidden;
  width: 96%;
  margin-left: 2%;
}
.item .lt{
  float: left;
  width: 200rpx;
}
.item .lt image{
  width: 180rpx;
  height: 160rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
}
.item .rt{
  width: 680rpx;
  height: 180rpx;
  margin-top: 20rpx;
}
.item .rt .name {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  
}

.item .rt .xinghao{
  line-height: 40rpx;
  height: 40rpx;
}

.item .rt .price{
  line-height: 40rpx;
  height: 40rpx;
}
.price .money{
  color: red;
  font-weight: bold;font-size: 26rpx;
}