/* pages/yuyue/index.wxss */
.app .header{
  width: 100%;
  height: 200rpx;
}

.content {
  width: 94%;
  height: auto;
  padding: 0 3%;
  background: #fff;
}

.title {
  width: 94%;
  height: 80rpx;
  padding: 0 3%;
  line-height: 80rpx;
}

.content .item {
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx #f5f5f5 solid;
}

.content .item .hint {
  width: 20%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  float: left;
}

.content .item input, .content .item .date {
  min-width: 78%;
  height: 100rpx;
  padding: 0 1%;
  line-height: 100rpx;
  font-size: 28rpx;
  float: left;
}

.btn_container {
  width: 100%;
  height: auto;
  margin: 30rpx auto;
  overflow: hidden;
}

.btn {
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  margin: 0 5%;
  float: left;
}

.app .telphone {
  width: 80%;
  height: 80rpx;
  margin: 0 10%;
  line-height: 80rpx;
  margin-top: 20rpx;
  text-align: center;
  border-radius: 40rpx;
  border: 1rpx #8a8a8a solid;
  color: #000;
  font-size: 28rpx;
}