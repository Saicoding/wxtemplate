page {
    background: #f3f3f3;
}
.app{
 font-size: 28rpx;
  height: auto; overflow: hidden;
  width: 100%;
}



image{
  height: 30rpx;
  width: 30rpx;
}
.header{
  width: 100%; height: 240rpx;
  background: #1ba8b9;
  padding-top: 20rpx;
}
.body{
  width: 96%;
  height: 200rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-left: 2%;
}

.body .title{
  font-size: 28rpx; float: left; margin-top: 20rpx;
  margin-left: 20rpx;  
  font-weight: bold;
  width: 80%;
}
.body .title .rt{font-weight: normal; font-size: 24rpx; margin-left: 20rpx;}

.body .fangjian{
  font-size: 26rpx; float: left; margin-top: 20rpx;
  margin-left: 20rpx;  
  width: 80%;
}
.body .info{
  font-size: 24rpx; float: left; margin-top: 20rpx;
  margin-left: 20rpx;  
  width: 80%;
}

.form{
  margin-top: 30rpx;
  width: 100%;
  height: auto; overflow: hidden;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background:  #fff;
}
.form .pick,.input,.fapiao{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #e2e2e2;
  width: 96; margin-left: 2%;
}

.form .lf{
  float: left; width: 25%; text-align: left;
}
.form .rt{
  width: 70%; float: left;
}

.form input{
  height: 40rpx; line-height: 40rpx;
  float: left; margin-top: 10rpx;
}

.form image{
  float: right; margin-top: 20rpx;
}

.fapiao .rt{
  font-weight: bold;
}

.xuzhi{
  padding: 10rpx;
  margin-top: 20rpx;
  line-height: 40rpx;
}

.footer{
  position: fixed;
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  left: 0;bottom: 0;
  background: #fff;
}
.footer .lt,.cent{
  float: left;

}
.footer .lt{
  width: 45%;
}

.footer .cent{
  width: 30%;
}

.footer .rt{
  float: right;
  width: 20%; text-align: center; color: #fff;
  background: #ff8201; 
}

.footer .lt view{
  float: left; margin-left: 20rpx; color: #ff8201; 
}
.footer .lt text{
  font-size: 40rpx;
}

.price{
  color: #ff8201; 
}


.couponapp{
  font-size: 24rpx;
}

.bushiyong{
  width: 96%;
  margin: 0 auto;
  background: #fff;
  border: 1rpx solid #e2e2e2;
  height: 100rpx;
  line-height: 100rpx; 
  margin-top: 30rpx;
}

.bushiyong text{
  float: left; margin-left: 20rpx; font-size: 36rpx;
  color: #999; 
}
.bushiyong image{
  float: right; margin-right: 30rpx;
  height: 50rpx;
  width: 50rpx;
  margin-top: 20rpx;
}

.coupon{
  width: 96%; margin: 0 auto; height:220rpx; background: #fff;
  margin-top: 20rpx; 
  position: relative;
}
.coupon .bg{
  width: 100%;  
  height: 220rpx;
 
}
.coupon .datas{
  position: absolute; top: 0;left: 0;
}
.coupon .dian{
  position: absolute;
  height: 20rpx;
  width: 20rpx; 
  top: 150rpx;
  left: -10rpx;

}
.coupon .on{
  color:#fd2055;
}
.coupon .off{
  color: #999;
}


.coupon .lt{
  float: left; line-height: 200rpx;
  width: 160rpx; margin-left: 40rpx;
  font-size: 48rpx;

}
.coupon .lt text{
  font-size: 26rpx;
}

.coupon .ct{
  float: left;
  width: 400rpx;
  margin-left: 20rpx;
  margin-top: 30rpx;
}
.coupon .ct .title{
  font-size: 38rpx;
  color: #000;
  display: block;
}

.coupon .ct text{
  display: block;
  width: 100%; margin-top: 10rpx;
  color: #ccc;
}
.coupon .rt {
  position: absolute;right: 0rpx;
  top:0rpx;
  height: 200rpx; line-height: 200rpx;
  text-align: center;
}

.coupon .rt .on{
   background:  #fd2055;
   padding: 10rpx; font-size: 26rpx;
   color: #fff;
   border-radius: 5rpx;
}

.coupon .rt .off{
   background:  #ccc;
   padding: 10rpx; font-size: 26rpx;
   color: #fff;
   border-radius: 5rpx;
}