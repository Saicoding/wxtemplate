.publish_app {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.publish_titile {
  width: 100%;
  height: 200rpx;
  background: #d9d9d9;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  color: #fff;
  position: relative;
}

publish_content {
  width: 100%;
  height: 100%;
  line-height: 200rpx;
  overflow: hidden;
  background: #cdc0b0;
}

.header {
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
  margin-right: 40rpx;
  font-size: 26rpx;
  position: absolute;
  right: 30rpx;
  bottom: 0;
}

.tubiao {
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.publish_news_item {
  width: 100%;
  background: #000;
  display: column;
}

.publish_app .content {
  width: 100%;
  height: auto;
  background: #f1f2f6;
  margin-bottom: 90rpx;
}

.add_type {
  width: 100%;
  min-height: 40rpx;
  padding-top: 12px;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.type_container{
  width: auto;
  height: 60rpx;
  display: flex;
  border-color: #dddfe4;
  border-radius: 10px;
  border-width: 2rpx;
  border-style: solid;
  background: #d9dde3;
}

.type_item_container{
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx 30rpx;
  float: left;
}

.add_button {
  width: 80rpx;
  height: 40rpx;
  display: flex;
  border-color: #dddfe4;
  border-radius: 10px;
  border-width: 2rpx;
  border-style: solid;
  background: #d9dde3;
}

.add_button_text {
  width: 100%;
  height: auto;
  justify-content: center;
  align-items: center;
  display: flex;
  font-size: 26rpx;
  font-family: "微软雅黑";
  color: #fff;
}

.type_item {
  width: 100%;
  height: 200rpx;
}

.type_item .type_add_item {
  height: 200rpx;
  margin: 10px 10px;
  border-radius: 10px;
  border-color: #ebecf1;
  background: #fff;
  border-width: 2rpx;
  border-style: solid;
}

.item_close {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 10rpx;
  left: 10rpx;
}

.item_image {
  position: relative;
  width: 28%;
  height: 200rpx;
  float: left;
}

.item_image_image {
  width: 140rpx;
  height: 140rpx;
  float: left;
  margin-left: 40rpx;
  margin-top: 40rpx;
}

.item_text {
  width: 64%;
  height: 200rpx;
  float: left;
}

.item_text_text {
  width: 100%;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  text-align: left center;
  font-size: 28rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
}

.item_sort {
  width: 40rpx;
  height: 200rpx;
  margin-right: 10rpx;
  float: right;
  display: block;
  position: relative;
}

.item_sort_up {
  margin: 5rpx 5rpx;
  width: 30rpx;
  height: 30rpx;
}

.item_sort_down {
  margin: 5rpx 5rpx;
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  bottom: 0;
  right: 3rpx;
}

.footer {
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom: 0;
  background: #1ba8b9;
}

.footer_text {
  height: 80rpx;
  font-size: 28rpx;
  justify-content: center;
  align-items: center;
  display: flex;
  color: #fff;
}
