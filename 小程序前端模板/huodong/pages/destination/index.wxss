page {
  font-family: '微软雅黑';
  background-color: #fff;
}

.app {
  width: 100%;
  height: auto;
  overflow: hidden;
  font-size: 26rpx;
}

.app .menubar {
  height: 79rpx;
  background: #fff;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99;
  white-space: nowrap;
  border-bottom: solid 1rpx #f4f5f6;
}

.app .menu {
  width: auto;
  height: 80rpx;
  line-height: 80rpx;
  display: inline-block;
  background: #fff;
}

.app .menubar text {
  display: inline-block;
  width: auto;
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-size: 30rpx;
  height: 90%;
  text-align: center;
}

.app .menubar text.active {
  color: #1ba8b9;
  border-bottom: solid 4rpx #1ba8b9;
  border-bottom-width: 50rpx;
}

