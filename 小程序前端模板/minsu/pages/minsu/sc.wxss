.nodata{
  height: 400rpx;
  width: 100%;
  margin-top: 100rpx;
}

.nodata image{
  height: 200rpx;
  width:  200rpx;
  display: block;
  margin: 0 auto;
  margin-top: 50rpx;
}
.nodata text{
  display: block;
  margin: 0 auto;
  margin-top: 20rpx;
  color:  #1ba8b9;
  font-size: 28rpx;
  text-align: center;
}

.nodata button{
  width: 400rpx;
  display: block;
  margin: 0 auto;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #fff;
  background:  #fd8137;
  margin-top: 50rpx;
}



.item{
  height: 200rpx; margin-top: 20rpx; background: #fff;
  width: 100%;
}

.item .lt{
  height:200rpx;
  width: 200rpx;
  float: left;
}
.item .lt image{
  width: 180rpx;
  height: 180rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.item .rt{
  width: 500rpx;
  height: 180rpx;
  float: left;
  margin-left: 20rpx;
  padding-top: 20rpx;
  position: relative;
}
.item .name{
  font-size: 28rpx; font-weight: bold;
}
.item .score{
  color: #1ba8b9; font-size: 26rpx; 
}
.item .col{
  color: #666; margin-top: 10rpx;
  font-size:  24rpx;
}

.item .price{
  height: 28rpx;
  width: 150rpx;
  position: absolute;
  right: 20rpx;
  bottom: 40rpx;
  text-align: center;
}
.item .price text{
   color: red; font-size: 28rpx; 
}

.delete{
  height: 40rpx;
  width: 100rpx;
  position: absolute;
  right: 20rpx;
  top: 30rpx;
  text-align: center;  
  font-size: 24rpx; 
  line-height: 40rpx;
  color: #fff;
  background: rgba(0, 0, 0, .5);
  border-radius: 10rpx;
}
