/* pages/activity/detail.wxss */

.app {
  width: 100%;
  height: auto;
}

.app .baseinfo {
  width: 100%;
  height: auto;
  font-size: 28rpx;
  background: #fff;
}

.app .baseinfo image {
  width: 100%;
  height: 380rpx;
}

.app .baseinfo .info {
  width: 92%;
  height: auto;
  padding: 0 4%;
}

.title, .date, .surplus {
  width: 100%;
  height: auto;
  line-height: 45rpx;
  font-size: 26rpx;
}

.activity_tit {
  font-size: 26rpx;
  font-weight: bold;
}

.surplus {
  color: #f00;
}

.join_activity {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background: #ff6d00;
  position: fixed;
  bottom: 0;
}

.app .content{
  width: 100%;
  height: auto;
  background: #fff;
  margin-top: 20rpx;
}

.app .content .atitle{
  width: 92%;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 4%;
  font-size: 26rpx;
  font-weight: bold;
  border-bottom: 1rpx #f5f5f5 solid;
}

.app .content .ainfo{
  width: 92%;
  height: auto; 
  line-height: 45rpx;
  margin: 0 4%;
  padding: 20rpx 0;
}
