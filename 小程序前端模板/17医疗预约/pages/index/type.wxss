/* pages/index/type.wxss */

.screen {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.screen text {
  width: auto;
  height: 60rpx;
  float: left;
}

.screen image {
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx;
  float: left;
}

.list {
  width: 100%;
  height: auto;
}

.list .item {
  width: 100%;
  height: auto;
  background: #fff;
  display: block;
  overflow: hidden;
  margin-top: 15rpx;
}

.list .item .tview {
  width: 100%;
  height: auto;
  background: #fff;
  display: inline-block;
  padding: 20rpx;
  overflow: hidden;
}

.list .item .lf {
  width: 22%;
  height: auto;
  float: left;
  display: flex;
  justify-content: center;
}

.list .item .lf image {
  width: 130rpx;
  height: 140rpx;
  text-align: center;
  border-radius: 12rpx;
}

.list .item .rf {
  width: 74%;
  height: auto;
  margin: 0 2%;
  float: right;
}

.zysc {
  width: 100%;
  height: auto;
  line-height: 42rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #515151;
}

.col {
  line-height: 50rpx;
}

.bview {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-top: 1rpx #f5f5f5 solid;
}

.bview .bitem{
  width: 33.1%;
  height: 80rpx;
  float: left;
  text-align: center;
  font-size: 22rpx;
}
