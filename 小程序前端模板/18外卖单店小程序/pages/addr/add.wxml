<form bindsubmit="fromSubmit">
  <view class="table_form">
    <view class="input bdbt">
      <text>联系人</text>
      <input name="name" type="text" placeholder="真实联系人" />
    </view>
    <view class="input bdbt">
      <text>手机号码</text>
      <input name="mobile" type="text" placeholder="手机号码" />
    </view>

    <view class="input bdbt">
      <text>身份证</text>
      <input name="idcard" type="text" placeholder="请输入身份证" />
    </view>

    
   
    <view bindtap="map" class="map bdbt">
      <text class="lt">地址定位</text>
      <text class="ct">{{gps_addr == '' ? "选择地图坐标" : gps_addr}}</text>
      <input hidden='true' value='{{gps_addr}}' name="gps_addr" />
      <input hidden='true' value="{{lng}}" name="lng" />
      <input hidden='true' value="{{lat}}" name="lat" />
      <image src="/img/dw.png"></image>
      <input hidden="true" />
    </view>
    <view class="input">
      <text>具体地址</text>
      <input name="address" type="text" placeholder="具体地址" />
    </view>

  </view>
  


  <view class="table_form">
    <view class="input">
      <text>默认地址</text>
      <radio-group bindchange="radioChange">
        <label>
          <radio name="is_default" value="1" />设为默认地址
        </label>
      </radio-group>
    </view>

  </view>

  



<view class="jszc">技术支持：微燚应用</view>
<view class="kongbai"></view>

<view class="addbtn">

    <button form-type='submit' style="background:{{color}}">确认保存</button>

</view>

</form>