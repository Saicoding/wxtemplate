/* pages/member/index.wxss */

.app {
  width: 100%;
  height: auto;
  font-size: 26rpx;
  overflow: hidden;
}

.app .uinfo{
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.app .uinfo .content{
  width: auto;
  height: auto;
  overflow: hidden;
}

.app .uinfo .content .face{
  width: 140rpx;
  height: 140rpx;
  background: #fff;
  border-radius: 70rpx;
}

.app .uinfo .content .face image{
  width: 136rpx;
  height: 136rpx;
  margin: 2rpx 2rpx;
  border-radius: 70rpx;

}

.app .uinfo .content .nickname{
  width: 100%;
  font-size: 28rpx;
  text-align: center;
  margin-top: 10rpx;
  color: #fff;
}


.col {
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  border-bottom: 1rpx #f5f5f5 solid;
}

.top_20{
  margin-top: 20rpx;
}

.col .icon {
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-top: 30rpx;
}

.col .jt {
  float: right;
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.col text {
  float: left;
  margin-left: 20rpx;
}
