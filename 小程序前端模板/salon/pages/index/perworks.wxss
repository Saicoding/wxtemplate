.works{
  width: 94%;
  height: auto;
  margin: 0 3%;
  font-size: 26rpx;
  overflow: hidden;
}

.works .item{
  width: 45%;
  height: auto;
  margin: 15rpx 2.5%;
  background: #fff;
  box-shadow: 2px 2px 1px #EAEAEA;
  float: left;
  position: relative;
  border-radius: 0 0 10rpx 10rpx;
}

.works .item .num{
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  position: absolute;
  top: 20rpx;
  right: 18rpx;
  padding: 0 10rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.5)
}

.works .item image{
  width: 90%;
  height: 260rpx;
  margin: 0 5%;
  margin-top: 20rpx;
}

.works .item .title{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}