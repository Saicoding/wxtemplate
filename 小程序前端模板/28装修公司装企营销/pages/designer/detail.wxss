/* pages/designer/detail.wxss */

.baseinfo{
  width: 92%;
  height: auto;
  padding: 20rpx 4%;
  background: #fff;
  overflow: hidden;
}

.baseinfo .face{
  width: 22%;
  height: 150rpx;
  float: left;
}

.baseinfo .face image{
  width: 100%;
  height: 150rpx;
  border-radius: 10rpx;
}

.baseinfo .info{
  width: 76%;
  height: auto;
  margin-left: 2%;
  float: right;
}

.baseinfo .info view{
  width: 100%;
  height: auto;
  font-size: 28rpx;
  line-height: 39rpx;
  color: #000;
}

.motto{
  width: 92%;
  height: auto;
  padding: 20rpx 4%;
  margin-top: 20rpx;
  background: #fff;
  overflow: hidden;
}

.motto .title{
  width: auto;
  height: auto;
  font-size: 28rpx;
  color: #FF4040;
}

.motto .content{
  width: auto;
  height: auto;
  font-size: 28rpx;
  line-height: 40rpx;
}

.jingdian{
  width: 92%;
  height: auto;
  margin: 20rpx 0;
  padding: 0 4%;
  background: #fff;
  padding-bottom: 20rpx; 
  overflow: hidden;
}

.jingdian .title{
  width: 100%;
  height: 60rpx;
  border-bottom: 5rpx #f5f5f5 dotted;
  padding-top: 10rpx;
  line-height: 60rpx;
  margin: 0 auto;
  font-size: 28rpx;
  text-align: center;
}

.jingdian .jitem{
  width: 45%;
  height: 220rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top:20rpx;
  position: relative;
  float: left;
}

.jingdian .jitem image{
  width: 100%;
  height: 220rpx;
  border-radius: 12rpx;
}

.jingdian .jitem .jtitle{
  width: 94%;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  text-overflow:  ellipsis;
  white-space:  nowrap;
  color: white;
  overflow: hidden;
  font-size: 24rpx;
  padding: 0 3%;
  border-radius: 0 0 12rpx 12rpx;
}

.join_activity {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background: #ff6d00;
  position: fixed;
  bottom: 0;
}