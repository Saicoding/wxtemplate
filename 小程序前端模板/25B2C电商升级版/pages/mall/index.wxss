/** 修正商品列表信息*/

.header {
  width: 100%;
  height: 50rpx;
  margin-top: 20rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}

.header .line {
  width: 15%;
  height: 1rpx;
  background: #bdbdbd;
  float: left;
}

.header .hname {
  width: auto;
  height: auto;
  color: #000;
  margin: 0 30rpx;
  float: left;
  font-size: 28rpx;
  font-weight: bold;
}

.list {
  width: 96%;
  height: auto;
  padding: 0 2%;
  padding-top: 5rpx;
  padding-bottom: 20rpx;
  overflow: hidden;
}

.sitem {
  width: 47.3%;
  height: auto;
  margin: 0 1%;
  padding: 15rpx 0;
  margin-top: 15rpx;
  float: left;
  background: #fff;
  border: 1rpx #f5f5f5 solid;
}

.sitem .thumbnail {
  width: 92%;
  height: 180rpx;
  margin: 0 4%;
}

.sitem .thumbnail image {
  width: 100%;
  height: 100%;
}

.sitem .name {
  width: 92%;
  height: 70rpx;
  line-height: 35rpx;
  margin: 0 4%;
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #000;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box !important;
  word-break: break-all;
}

.sitem .info {
  width: 92%;
  height: 40rpx;
  line-height: 40rpx;
  margin: 0 4%;
  margin-top: 10rpx;
  overflow: hidden;
  display: inline-flex;
}

.sitem .info .price {
  width: 50%;
  height: auto;
  text-align: left;
  float: left;
  font-size: 28rpx;
  color: #f00;
}

.sitem .info .pay {
  width: auto;
  min-width: 50%;
  height: auto;
  text-align: right;
  float: right;
}

.sitem .info .pay text {
  width: 40rpx;
  height: 40rpx;
  padding: 5rpx 15rpx;
  border-radius: 8rpx;
  color: #fff;
}
