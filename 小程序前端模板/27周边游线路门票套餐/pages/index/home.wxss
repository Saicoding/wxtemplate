.recommend {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  background: white;
}

.recommend .title {
  width: 100%;
  height: 70rpx;
  display: flex;
}

.recommend .title text {
  font-size: 30rpx;
  color: black;
  align-items: center;
  display: flex;
  margin-left: 20rpx;
  margin-right: 30rpx;
}

.recommend .swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.girds {
  margin: 0 10rpx;
  overflow: hidden;
}

.gird_item {
  position: relative;
  float: left;
  padding: 10px 5px;
  width: 33.3%;
  box-sizing: border-box;
}

.gird_item_icon {
  display: block;
  width: 100%;
  height: 160rpx;
  margin: 0 auto;
  border-radius: 6.0rpx;
}

.gird_item_label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: #000;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.indicator {
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: white;
}

.swiper_item {
  margin: 15rpx 10rpx;
  position: relative;
  float: left;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #aaa;
}

.item_shop {
  background: #fff;
  margin-bottom: 10px;
}

.item_shop .top {
  width: 100%;
  height: 300rpx;
}

.item_shop .top image {
  width: 100%;
  height: 300rpx;
}

.price_container {
  display: flex;
  z-index: 3;
  left: 0;
  bottom: 0;
  width: auto;
  height: 50rpx;
  background: rgba(0, 0, 0, 0.6);
  line-height: 50rpx;
  border-radius: 15rpx;
}

.discount_price {
  padding-left: 20rpx;
  margin-right: 20rpx;
  width: auto;
}

.original_price {
  text-align: left;
  width: 50%;
  font-size: 26rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  text-decoration: line-through;
  float: left;
  color: #fff;
}

.item_shop {
  width: 96%;
  margin-left: 2%;
  border-bottom: 1rpx #e2e2e2 solid;
  padding-bottom: 20rpx;
}

.item_shop .bottom {
  height: auto;
  overflow: hidden;
}

.item_shop .bottom .content {
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 20rpx;
}

.item_shop .bottom .content text {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.item_shop .bottom .content .tag {
  width: 100%;
  height: 60rpx;
  margin-top: 20rpx;
  display: block;
}

.item_shop .bottom .content .tag text {
  width: auto;
  font-size: 28rpx;
  color: #515151;
  float: right;
}

.button_tag {
  float: left;
  margin-right: 30rpx;
  border-radius: 6rpx;
  background: #f3f3f3;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
}

.button_tag image {
  width: 32rpx;
  height: 32rpx;
}

.youhuiquanqiang {
  height: 150rpx;
  margin-top: 20rpx;
  text-align: center;
}

.youhuiquanqiang image {
  width: 96%;
  height: 150rpx;
}

.list_more {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #1ba8b9;
  background: #fff;
}
