<view class="title">
  申请预约
</view>

 <form bindsubmit="formBindsubmit">
  <view class="table_form">
      <view class="input bdbt">
        <text>联系人</text>
        <input name="name" type="text"  placeholder="请输入名称" />
      </view>
      <view class="input">
        <text>联系电话</text>
        <input name="mobile" type="number"  placeholder="输入电话或手机号码" />
      </view>  
  </view>

  <view class="table_form">
      <view class="textarea">
          <text>备注</text>
          <textarea name="content" placeholder="输入备注，最多500字" />
      </view>
  </view>


  <button formType="submit" class="table_btn">立即预约</button>
</form>

<view class="jszc">技术支持：www.erre7.cn</view>
