/* pages/mine/index.wxss */

.nologin, .login {
  width: 92%;
  height: 200rpx;
  background: #fff;
  margin: 20rpx 4%;
  border-radius: 10rpx;
  box-shadow: 2px 2px 1px #eaeaea;
  overflow: hidden;
  position: relative;
}

.nologin .unlogin {
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #99499c;
  color: #fff;
  margin: 0 35%;
  text-align: center;
  position: absolute;
  top: 60rpx;
  border-radius: 10rpx;
}

.login .lt {
  width: 70%;
  height: 220rpx;
  float: left;
}

.login .lt .wh {
  width: 86%;
  height: 40rpx;
  line-height: 40rpx;
  margin-left: 7%;
  margin-top: 45rpx;
  font-size: 28rpx;
  color: #8a8a8a;
}

.login .lt .name {
  width: 86%;
  height: auto;
  margin-left: 7%;
  margin-top: 15rpx;
  font-size: 34rpx;
  color: #000;
}

.login .rt {
  width: 30%;
  height: 220rpx;
  float: right;
  text-align: center;
}

.login .rt image {
  width: 140rpx;
  height: 140rpx;
  margin: 40rpx auto;
  border-radius: 70rpx;
}

.content {
  width: 84%;
  height: auto;
  margin: 20rpx 4%;
  padding: 0 4%;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 2px 2px 1px #eaeaea;
}

.content .ctitle {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.content .citem {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx #f5f5f5 solid;
  font-size: 28rpx;
  color: #000;
}

.content .citem image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 25rpx;
  float: left;
}

.content .citem text{
  width: auto;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #000;
  overflow: hidden;
  margin-left: 25rpx;
  float: left;
}