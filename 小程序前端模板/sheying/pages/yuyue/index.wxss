/* pages/yuyue/index.wxss */

.app {
  width: 100%;
  height: auto;
  overflow: hidden;
  font-size: 26rpx;
  position: relative;
  background: #fff;
  display: inline-block;
}

.app .header {
  width: 100%;
  height: 320rpx;
  position: relative;
}

.app .header .hinfo {
  width: 100%;
  height: 320rpx;
  top: 0;
  position: absolute;
  background: rgba(0, 0, 0, 0.6);
}

.app .header image {
  width: 100%;
  height: 320rpx;
}

.app .header .face {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  position: absolute;
  top: 40rpx;
  margin: 0 42%;
  border: 3rpx #fff solid;
}

.app .header .name {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  position: absolute;
  top: 170rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
}

.app .header .detail{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  top: 230rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
}

.app .title{
  width: 100%;
  height: auto;
  padding: 30rpx 0;
  background: #fff;
}

.app .title .chinese{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
}

.app .title .english{
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 26rpx;
  color: #8a8a8a;
}

.app .iteminput{
  width: 92%;
  height: auto;
  background: #fff;
  overflow: hidden;
  padding: 0 4%;
}

.app .iteminput .hint{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  padding-top: 10rpx;
  color: #000;
}

.app .iteminput input{
  height: 70rpx;
  line-height: 70rpx;
  border: 1rpx #f5f5f5 solid;
  padding: 0 20rpx;
  margin-top: 10rpx;
}

.app .iteminput .date{
  height: 70rpx;
  line-height: 70rpx;
  border: 1rpx #f5f5f5 solid;
  padding: 0 20rpx;
  margin-top: 10rpx;
}

.app .iteminput .select{
  width: 50%;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  padding-top: 15rpx;
  overflow: hidden;
  background: #fff;
}

.app .iteminput .select checkbox{
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
}

.app .iteminput textarea{
  width: 96%;
  height: 200rpx;
  border: 1rpx #f5f5f5 solid;
  padding: 20rpx 2%;
}

.yuyue{
  widows: 80%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 30rpx 10%;
  color: #fff;
  font-size: 28rpx;
}

.warn{
  width: auto;
  height: auto;
  color: #f00;
  font-size: 28rpx;
}
