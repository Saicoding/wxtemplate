.slide-image {
  width: 100%;
  height: 360rpx;
}

.classify {
  width: 100%;
  height: auto;
  display: inline-block;
  background: #fff;
}

.citem {
  width: 25%;
  height: 160rpx;
  float: left;
  text-align: center;
}

.citem .name {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
}

.citem .image {
  width: 90rpx;
  height: 90rpx;
  margin: 0 auto;
  margin-top: 15rpx;
  border-radius: 45rpx;
  background: #f00;
  display: flex;
  justify-content: center;
  align-items: center;
}

.module {
  width: 100%;
  height: auto;
  margin-top: 15rpx;
  background: #fff;
}

.module .header {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx #f5f5f5 solid;
}

.module .header .name {
  width: 76%;
  height: auto;
  float: left;
  font-size: 30rpx;
  font-weight: bold;
}

.vline {
  width: 10rpx;
  height: 40rpx;
  background: #f00;
  margin: 20rpx 0;
  margin-right: 15rpx;
  float: left;
}

.module .header .icon {
  width: 18%;
  height: auto;
  float: right;
  text-align: right;
  margin-right: 2%;
}

.module .header .icon image {
  width: 60rpx;
  height: 60rpx;
}

.item {
  width: 200rpx;
  height: 200rpx;
  display:inline-block;
  margin-left: 10rpx;
}

.content{
  width: 100%;
  height: auto;
  display: inline-block;
}

.content .item {
  width: 48%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  float: left;
}

.content .item image {
  width: 300rpx;
  height: 260rpx;
  display: block;
}

.riqi {
  width: 96%;
  text-align: right;
  margin-top: 20rpx;
  margin-left: 2%;
  padding-bottom: 20rpx;
  font-size: 26rpx;
}

.content .item .name {
  width: 300rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display:inline-block;
}


