/* pages/index/team.wxss */

.app .item {
  width: 100%;
  height: 200rpx;
  background: #fff;
  border-bottom: 1rpx #f8f8f8 solid;
}

.item .lt {
  width: 30%;
  height: 200rpx;
  background: #f00;
  float: left;
  position: relative;
}

.item .lt .type {
  width: 94%;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  padding: 0 3%;
  background: #f0f;
  bottom: 0;
  font-size: 24rpx;
  background-image: -webkit-linear-gradient(-90deg, #87ceff, #436eee);
  background-image: linear-gradient(-90deg, #87ceff, #436eee);
  color: #fff;
}

.item .lt .face {
  width: 100%;
  height: 200rpx;
}

.item .rt {
  width: 66%;
  height: 200rpx;
  padding: 0 2%;
  float: right;
}

.info{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.info text{
  margin-left: 10rpx;
  font-size: 26rpx;
}

.introduce {
  width: 100%;
  height: auto;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-size: 24rpx;
  line-height: 36rpx;
  color: #000;
}

.item .rt .bview{
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-top: 8rpx;
}

.bview .detail, bview .yuyue{
  width: auto;
  height: auto;
  float: left;
  margin-right: 20rpx;
  font-size: 27rpx;
}
