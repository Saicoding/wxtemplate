<view class="guanyu">
  <view class="contact bdbt">
    <view class="title">公司介绍</view>
    <view class="col">
      <text class="ct" style="color:#8a8a8a;">{{datas.describe}}</text>
    </view>
  </view>
  <view style='height:20rpx; background:#f5f5f5'></view>
  <view class="contact bdbt">
    <view class="title">联系我们</view>
    <view class="col">
      <text class="lt">公司：</text>
      <text class="ct" style="color:#8a8a8a;">{{datas.company_name}}</text>
    </view>
    
    <view class="col">
      <text class="lt">地址：</text>
      <text class="ct" style="color:#8a8a8a;">{{datas.address}}</text>
    </view>
    <view class="col">
      <text class="lt">联系人：</text>
      <text class="ct" style="color:#8a8a8a;">{{datas.name}}</text>
    </view>
    <view class="col">
      <text class="lt">电话：</text>
      <text class="ct" style="color:#8a8a8a;">{{datas.mobile}}</text>
    </view>

    <!-- <view class="col">
      <text class="lt">微信：</text>
      <text class="ct">{{datas.mobile}}</text>
    </view> -->

  </view>
  <view class="weizi bdbt">
    <view class="title">交通信息</view>
    <view class="content" style="color:#8a8a8a;">{{datas.traffic}}</view>
  </view>
  <view class="map">
    <view class="title">地图位置</view>
    <view class="ditu">
      <map id="map" longitude="{{datas.lng}}" latitude="{{datas.lat}}" scale="14" bindregionchange="regionchange" show-location style="width: 100%; height: 400rpx;"></map>
    </view>
    <view style='height:20rpx; background:#fff'></view>
  </view>

  <view class="jszc">技术支持：[巅峰互联]www.erre7.cn</view>
  <view style="height:100rpx; background:#f5f5f5;"></view>

</view>