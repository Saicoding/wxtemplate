.app .content .grid_item {
  width: 45%;
  height: 180rpx;
  margin: 15rpx 15rpx;
  position: relative;
  float: left;
}

.app .content .grid_item image {
  width: 100%;
  height: 180rpx;
  border-radius: 6rpx;
}

.app .content .grid_item view {
  width: 100%;
  height: 180rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 100;
  color: #fff;
  background: rgba(0, 0, 0, 0.3);
}

.app .content .grid_item .title {
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.app .content .grid_item view text {
  color: white;
  font-family: '微软雅黑';
  font-size: 24rpx;
  display: block;
  margin: 0 auto;
  text-align: center;
  width: 100%;
  line-height: 45rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.app .content .tjrq{
  width: 100%;
  height: auto;
  display: inline-block;
  overflow: hidden;
  margin-top: 30rpx;
}

.app .content .tjrq .tuijian {
  width: 100%;
  height: auto;
  margin: 10rpx 30rpx;
  overflow: hidden;
}

.app .content .tjrq .tuijian view {
  float: left;
  width: 20%;
  margin-left: 20rpx;
  border: 1rpx solid #e2e2e2;
  color: #000;
  margin-top: 20rpx;
  padding: 8rpx 0;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}

.nomore {
  height: 80rpx;
