/* pages/gk/index.wxss */

.content {
  width: 92%;
  height: auto;
  padding: 0 4%;
  margin-top: 15rpx;
  background: #fff;
}

.content .header {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-bottom: 1rpx #f5f5f5 solid;
  font-size: 30rpx;
  font-weight: bold;
}

.content .item {
  width: 100%;
  height: auto;
  margin: 15rpx auto;
}

.content .item text {
  width: 100%;
  height: auto;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #000;
}

.content .item image {
  width: 100%;
  height: 460rpx;
  margin: 20rpx 0;
}
