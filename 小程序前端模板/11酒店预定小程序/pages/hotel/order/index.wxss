page {
    background: #f3f3f3;
}
.app{
  width: 100%; height: auto; overflow: hidden;
  font-size: 26rpx; 

}

.app  .menu{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-bottom: solid 1rpx #f4f5f6;

}


.menu text {
  float: left;
  width: 25%;
  font-size: 30rpx;
  text-align: center;
}

.app  .menu text.active {
  color: #07b7ce;
  border-bottom:  5rpx solid #07b7ce;
}

.order{
  height: auto;
  overflow: hidden;
  margin-top: 30rpx;
  width: 100%;
  background: #fff;
  padding-bottom: 20rpx;
  border: 1rpx solid #e2e2e2;
}

.product_type{
  height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
}

.product_type image{
  float: left;
  width: 40rpx; height: 40rpx;
  margin-left: 20rpx; margin-top: 20rpx;
}
.gtype{
  float: left;
  width: 300rpx; height: 40rpx;
  margin-left: 20rpx; margin-top: 20rpx;
  line-height: 40rpx; font-size: 28rpx;
  color: #000; 
}
.type{ 
  float: right;
  width: 200rpx; height: 40rpx;
  margin-right: 20rpx; margin-top: 20rpx;
  line-height: 40rpx; font-size: 28rpx;
  text-align: right;
}
  .product {
    width: 90%; margin: 0 auto;
    height: auto;
    margin-top: 20rpx;
  }
  .title{
    font-size: 26rpx;
    color: #000; 
    height: 50rpx;
  }
  .name {
    float: left;
  }
  .price {float: right;color:red; font-size:32rpx;}

  .riqi{
    display: block;
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #000;
  }
  .info{
    display: block;
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #000;
  }





  .nomore{
  height: 80rpx; line-height: 80rpx;
  border-top: 1px solid #f3f3f3;
  text-align: center;
  font-size: 26rpx; color: #ccc;  
  background: #fff; 
}

.more{
  height: 80rpx; line-height: 80rpx;
  border-top: 1px solid #f3f3f3;
  text-align: center;
  font-size: 26rpx; color: #1ba8b9;  
  background: #fff; 
}
.nodata{
  height: 400rpx;
  width: 100%;
}

.nodata image{
  height: 200rpx;
  width:  200rpx;
  display: block;
  margin: 0 auto;
  margin-top: 50rpx;
}
.nodata text{
  display: block;
  margin: 0 auto;
  margin-top: 20rpx;
  color:  #1ba8b9;
  font-size: 28rpx;
  text-align: center;
}