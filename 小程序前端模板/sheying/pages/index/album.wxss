/* pages/index/album.wxss */
.app{
  width: 100%;
  height: auto;
  position: relative;
}

.cscroll {
  width: 100%;
  height: 1210rpx;
  position: relative;
  overflow: hidden;
  white-space: nowrap; 
}

.cscroll .album{
  width: 750rpx;
  height: 1210rpx;
  display: inline-block;
}

.cscroll .album .images {
  width: 100%;
  height: 1210rpx;
  filter: blur(5rpx);
  -webkit-filter: blur(5rpx); /* Chrome, Opera */
  -moz-filter: blur(5rpx);
  -ms-filter: blur(5rpx);
  
  ime-mode: aspectFill;
}

.cscroll .album .viewer{
  width: 590rpx;
  height: 700rpx;
  position: absolute;
  top: 100rpx;
  margin: 0 80rpx;
  border-radius: 15rpx;
}

 .cscroll .album .viewer image{
  width: 100%;
  height: 700rpx;
  ime-mode: aspectFill;
  border-radius: 15rpx;
  border: 5rpx solid #fff;
} 

.bottom{
  width: 96%;
  height: auto;
  margin: 0 2%;
  position: absolute;
  bottom: 50rpx;
}

.app .bottom .serblock{
  width: 22%;
  height: 60rpx;
  line-height: 60rpx;
  background: #f00;
  margin: 10rpx 1.5%;
  text-align: center;
  font-size: 26rpx;
  border-radius: 10rpx;
  float: left;
  color: #fff;
}
