.header_search {
  width: 100%;
  height: 80rpx;
  border-bottom: 1px solid #e2e2e2;
  background: #fff;
  font-size: 26rpx;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
}

.liugao {
  height: 160rpx;
}

.header_search .city {
  width: 25.5%;
  height: 80rpx;
  float: left;
}

.header_search .city image {
  width: 26rpx;
  height: 26rpx;
  margin-left: 10rpx;
}

.header_search .search {
  width: 73.5%;
  height: 80rpx;
  float: right;
}

.header_search .search image {
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.header_screen {
  width: 100%;
  height: 80rpx;
  background: #fff;
}

.header_screen .screen_item {
  width: 33.3%;
  height: 80rpx;
  float: left;
}

.header_screen .screen_item image {
  width: 26rpx;
  height: 26rpx;
  margin-left: 10rpx;
}

.paixu_dialog {
  height: auto;
  width: 100%;
  background: #fff;
  z-index: 999;
  position: fixed;
  top: 168rpx;
  left: 0;
}

.paixu_dialog .orderitem {
  height: 60rpx;
  line-height: 60rpx;
  color: #000;
}

.paixu_dialog .on {
  color: #1ba8b9;
  font-size: 26rpx;
}

.paixu_dialog image {
  width: 30rpx;
  height: 30rpx;
  margin-top: 20rpx;
}

.paixu_dialog .lt {
  float: left;
  width: 10%;
  display: block;
  text-align: center;
}

.paixu_dialog text {
  float: right;
  width: 90%;
  text-align: left;
  display: block;
  height: 60rpx;
  border-bottom: 1rpx solid #f3f3f3;
  font-size: 26rpx;
}

.item {
  width: 96%;
  margin-left: 2%;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  background: #fff;
}

.photo {
  height: 400rpx;
  width: 100%;
  position: relative;
}

.photo image {
  width: 100%;
  height: 400rpx;
}

.photo .price {
  position: absolute;
  left: 0;
  bottom: 0;
  width: auto;
  height: 60rpx;
  padding: 0 15rpx;
  line-height: 60rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.7);
  text-align: center;
}

.price text {
  float: left;
  margin-left: 10rpx;
}

.price .qijia {
  font-size: 32rpx;
  margin-left: 20rpx;
}

.price .qi {
  font-size: 24rpx;
}

.price .yj {
  text-decoration: line-through;
  color: #f3f3f3;
}

.title {
  line-height: 32rpx;
  width: 98%;
  margin-left: 1%;
  margin-top: 10rpx;
}

.title .name {
  font-size: 32rpx;
  font-weight: bold;
}

.title .info {
  font-size: 26rpx;
}

.icon {
  height: 80rpx;
  width: 98%;
  margin-left: 1%;
}

.icon image {
  width: 24rpx;
  height: 24rpx;
}

.icon .tj {
  font-size: 24rpx;
  margin-top: 20rpx;
  float: left;
  background: #ff69b4;
  color: #fff;
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
}

.icon .kd {
  font-size: 24rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
  float: left;
  background: #add8e6;
  color: #fff;
  width: 180rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
}

.icon .ty {
  font-size: 24rpx;
  margin-top: 20rpx;
  float: left;
  margin-left: 10rpx;
  background: #f5f5f5;
  color: #c0c0c0;
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
}

.icon .num {
  font-size: 24rpx;
  margin-top: 20rpx;
  float: right;
  margin-right: 10rpx;
  color: #c0c0c0;
  width: 140rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}

.nomore {
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1px solid #f3f3f3;
  text-align: center;
  font-size: 26rpx;
  color: #ccc;
  background: #fff;
}

.more {
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1px solid #f3f3f3;
  text-align: center;
  font-size: 26rpx;
  color: #1ba8b9;
  background: #fff;
}

.nodata {
  height: 400rpx;
  width: 100%;
}

.nodata image {
  height: 200rpx;
  width: 200rpx;
  display: block;
  margin: 0 auto;
  margin-top: 50rpx;
}

.nodata text {
  display: block;
  margin: 0 auto;
  margin-top: 20rpx;
  color: #1ba8b9;
  font-size: 28rpx;
  text-align: center;
}
