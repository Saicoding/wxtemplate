/**index.wxss**/

.menu {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-bottom: solid 1rpx #f4f5f6;
  margin-top: 15rpx;
}

.menu text {
  float: left;
  width: 25%;
  font-size: 30rpx;
  text-align: center;
}

.menu text.active {
  color: #07b7ce;
  border-bottom: 5rpx solid #07b7ce;
}

.screen {
  width: 25%;
  height: 80rpx;
  line-height: 80rpx;
  float: left;
  border-bottom: solid 1rpx #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.screen image {
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin-right: 5rpx;
}

.screen text {
  width: auto;
  float: left;
}

.list {
  width: 100%;
  height: auto;
}

.list .item {
  width: 94%;
  height: auto;
  padding: 15rpx 3%;
  background: #fff;
  border-bottom: 1rpx #f5f5f5 solid;
  margin-top: 1rpx;
  position: relative;
}

.contact {
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 10rpx;
  background: #25b83d;
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  padding: 5rpx 15rpx;
  color: #fff;
  font-size: 26rpx;
}

.item .title {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
}

.item .title .type {
  width: auto;
  height: auto;
  line-height: 50rpx;
  background: #02bdb2;
  color: #fff;
  padding: 8rpx 10rpx;
  margin-right: 15rpx;
}

.item .title .num {
  width: auto;
  height: auto;
  line-height: 50rpx;
  background: #eef0ed;
  color: #515151;
  padding: 8rpx 10rpx;
  margin-right: 15rpx;
}

.item .route {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.item .date, .item .car, .item .remarks {
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 28rpx;
  color: #8a8a8a;
}

.item .info {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}

.item .info .name {
  width: auto;
  height: auto;
  float: left;
  margin-right: 30rpx;
  font-size: 24rpx;
  color: #515151;
}

.item .info .name image {
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin: 10rpx 0;
  margin-right: 8rpx;
}

.item .info .phone {
  float: left;
  font-size: 24rpx;
  color: #515151;
}

.botview {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background: #fff;
  border-top: 1rpx #f5f5f5 solid;
}

.botview .mine {
  width: 15%;
  height: 100rpx;
  float: left;
  font-size: 22rpx;
}

.botview .mine .icon, .iname{
  width: 100%;
  height: auto;
  text-align: center;
  font-size: 22rpx;
  color: #8a8a8a;
}

.botview .mine .icon image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
}

.botview .line{
  width: 0.2%;
  height: 70rpx;
  margin-top: 15rpx;
  float: left;
  background: #f5f5f5;
}

.botview .frzc{
  width: 36%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  margin: 15rpx 3.2%;
  background: #02BDB2;
  float: left;
  border-radius: 10rpx;
  color: #fff;
  font-size: 26rpx;
}

.botview .fczr{
  width: 36%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  margin: 15rpx 3.2%;
  background: #8A4AFB;
  float: left;
  border-radius: 10rpx;
  color: #fff;
  font-size: 26rpx;
}
