<!--pages/mine/order.wxml-->
<view class="app">
  <view class="menu">
    <text bindtap="onclick_menu" data-type="0" style="color: {{type==0?color: ''}}; border-width:{{type==0? 3: 0}}; border-color: {{type==0?color: ''}}; border-bottom-style:solid;">全部</text>
    <text bindtap="onclick_menu" data-type="1" style="color: {{type==1?color: ''}}; border-width:{{type==1? 3: 0}}; border-color: {{type==0?color: ''}}; border-bottom-style:solid;">待付款</text>
    <text bindtap="onclick_menu" data-type="2" style="color: {{type==2?color: ''}}; border-width:{{type==2? 3: 0}}; border-color: {{type==0?color: ''}}; border-bottom-style:solid;">已付款</text>
    <text bindtap="onclick_menu" data-type="3" style="color: {{type==3?color: ''}}; border-width:{{type==3? 3: 0}}; border-color: {{type==0?color: ''}}; border-bottom-style:solid;">已退款</text>
  </view>

  <view class="order">
    <navigator url="/pages/mine/orderDetail">
      <view class="title bdbt">
        <text class="lt" style='color:#8a8a8a;'>订单编号：59c21a8795044277456568</text>
        <text class="rt" style='color:red;'>待支付</text>
      </view>
      <view class="product ">
        <image src='/img/pics/001.jpg'></image>
        <view class="rt">
          <view class='tit'>豪华大包间</view>
          <view class='price'>yen1000</view>
        </view>
      </view>
    </navigator>
    <view class="status bdtp">
      <view class="pay" style='background:{{color}}; color:#fff;'>去支付</view>
      <view class="btn">取消订单</view>
    </view>
  </view>

  <view class="order">
    <navigator url="/pages/mine/orderDetail">
      <view class="title bdbt">
        <text class="lt" style='color:#8a8a8a;'>订单编号：59c21a8795044277456568</text>
        <text class="rt" style='color:red;'>待支付</text>
      </view>
      <view class="product ">
        <image src='/img/pics/001.jpg'></image>
        <view class="rt">
          <view class='tit'>豪华大包间</view>
          <view class='price'>yen1000</view>
        </view>
      </view>
    </navigator>
    <view class="status bdtp">
      <view class="pay" style='background:{{color}}; color:#fff;'>去支付</view>
      <view class="btn">取消订单</view>
    </view>
  </view>

  <view style="color:{{color}}" class="more">查看更多</view>
  <view class="nomore">没有数据了</view>
  <view class="jszc">技术支持：微燚应用</view>

</view>