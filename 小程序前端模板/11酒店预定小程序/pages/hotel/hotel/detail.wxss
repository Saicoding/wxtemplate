page {
    background: #f3f3f3;
}
.app{
  font-size: 28rpx;
  height: auto; overflow: hidden;
  width: 100%;
}

.header{
  height: 300rpx;
  width: 100%;
  position: relative;
}
.header image{
  width: 100%; height: 300rpx;
}
.commpany_title{
  width: 100%;
  color: #000; 
  font-size: 32rpx;
  font-weight: bold;
  background: #fff;
  border-bottom: 1rpx #e2e2e2 solid;
  line-height: 50rpx;
  margin-top: 10rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.commpany_title text{
  width: 96%;
  margin-left: 2%;text-align: center;
}
.header .num{
  position:  absolute;
  background: rgba(0,0, 0, .5); 
  right: 20rpx;
  bottom: 20rpx;
  border-radius: 10rpx;
  color: #fff;
  font-size: 26rpx;
  padding: 10rpx;
  z-index: 100;
}
.pd30{
  padding-bottom: 30rpx;
}

.col{
  height: 80rpx;
  padding-top: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #e2e2e2;
}

.col .left{
  float: left; color: #000;
  width: 20%;
  text-align: center;
  margin-top: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.col .big{
  font-size: 40rpx;
}

.col .center{
  width: 70%;
  text-align: left;
  float: left;
  margin-top: 10rpx;
}

.col image{
  float: right;
  width: 30rpx; height: 30rpx;
  margin-right: 5rpx;
  margin-top: 10rpx;
}

.product{
  width: 100%; padding-bottom: 20rpx;
  margin-top: 20rpx;
   background: #fff;
}
.product .riqi{
  width: 100%; height: 80rpx;
  line-height: 80rpx;
  color: #000;
  border-bottom: 1rpx solid #e2e2e2;

}

.product .riqi .rz{
  width: 40%;
  font-size: 26rpx;
  text-align: center;
   float: left;
}
.product .riqi .rz text{
  font-size: 32rpx;
  font-weight: bold;
}

.product .riqi .ld{
  width: 40%;
  font-size: 26rpx;
  text-align: center;
  float: left;
}
.product .riqi .ld text{
  font-size: 32rpx;
  font-weight: bold;
  
}

.product .riqi .gj{
  width: 20%;
  font-size: 26rpx;
  text-align: center;
   float: left;
}
.product .riqi .gj image{
  width: 30rpx; height: 30rpx;
}

.fangxing{
  padding: 10rpx;
}

.fangjian{
  height: 200rpx;
  border-bottom: 1rpx solid #e2e2e2;
}

.fangjian .lt{
  float: left; width:200rpx;
}
.fangjian .lt image{
  height: 150rpx;
  width: 150rpx;
  margin-top: 25rpx;
  margin-left: 25rpx;
}

.fangjian .ct{
  width: 280rpx;
  float: left;
}
.fangjian .ct .title{
  font-size: 30rpx; font-weight: bold;
  margin-top: 30rpx;
}

.fangjian .ct .info{
  font-size: 26rpx;
  margin-top: 10rpx;
}

.fangjian .price{
  color:  red;
  float: left;
