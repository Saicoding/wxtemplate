/* pages/mine/helList.wxss */
.list {
  width: 100%;
  height: auto;
}

.list .item {
  width: 94%;
  height: auto;
  padding: 20rpx 3%;
  background: #fff;
  border-bottom: 1rpx #f5f5f5 solid;
  overflow: hidden;
}

.list .item .lt {
  width: 30%;
  height: 180rpx;
  float: left;
}

.list .item .lt image {
  width: 100%;
  height: 180rpx;
}

.list .item .rt {
  width: 68%;
  height: 180rpx;
  margin-left: 2%;
  float: right;
}

.list .item .rt .title{
  width: 100%;
  height: 80rpx;
  line-height: 40rpx;
  color: #000;
  font-size: 30rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  font-weight:  normal;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.list .item .info {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  display: inline-flex;
}

.list .item .rt .info .iteminfo {
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  text-align: left;
  margin-left: 2%;
}

.list .item .rt .info .iteminfo image {
  width: 30rpx;
  height: 30rpx;
  margin: 5rpx 0;
  float: left;
}

.list .item .rt .iteminfo text {
  float: left;
  width: auto;
  height: 40rpx;
  margin-left: 8rpx;
  font-size: 22rpx;
  color: #8a8a8a;
}