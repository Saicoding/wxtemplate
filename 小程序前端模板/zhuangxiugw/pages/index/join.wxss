/* pages/index/join.wxss */

.app {
  width: 92%;
  height: auto;
  overflow: hidden;
  margin: 20rpx 2%;
  padding: 0 2%;
  background: #fff;
}

.app .content{
  width: 100%;
  height: auto;
  margin-bottom: 15rpx;
}

.app .content .title{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
}

.app .content .title .alert{
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  margin-right: 10rpx;
  color: #f00;
}

.app .content input{
  width: 96%;
  height: 50rpx;
  border: 1rpx #f5f5f5 solid;
  padding: 0 2%;
  border-radius: 6rpx;
}

.app .content textarea{
  width: 96%;
  height: 180rpx;
  border: 1rpx #f5f5f5 solid;
  border-radius: 6rpx;
  padding: 15rpx 2%;
}

.app .join{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #FE8007;
  margin: 40rpx 0;
  color: #fff;
  font-size: 28rpx;
}
