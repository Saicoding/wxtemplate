/* index.wxss */
 .menu{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-bottom: solid 1rpx #f4f5f6;

}

.info{
  margin-top: 20rpx;
  padding: 20rpx;
}

.search{
  height: 100rpx;
  width: 100%;
  margin-top: 20rpx;
}

.search input{
  background: #fff;
  width: 400rpx;
  float: left;
  margin-top: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  margin-left: 50rpx;
}

.search button{
  margin-top: 20rpx;
  width: 200rpx;
  float: left;
  margin-left: 10rpx;
  height: 80rpx;
  color: #fff;
  font-size: 26rpx;
  line-height: 80rpx;
}
.menu text {
  float: left;
  width: 25%;
  font-size: 26rpx;
  text-align: center;
}

.order{
  height: auto;
  overflow: hidden;
  background: #fff;
  width: 100%;
  margin-top: 20rpx;
}

.order .lt{
  float: left;
}
.order .rt{
  float: right;
}

.order .title{
   height: 60rpx;
   line-height: 60rpx;
   width: 96%;
   margin: 0 auto;
}
.order  .product{
  width: 96%;
  height: auto;
  overflow: hidden;
  margin: 0 auto;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
}
.product image{
  width: 100rpx;
  height: 100rpx;
  float: left;
}
.product .rt{
  float: right;
  width: 600rpx;
}
.product .price{
  float: right;
  color: red;
}
.product .tit{
  line-height: 36rpx;
  height: auto;
  overflow: hidden;
}

.product .info{
  height: 40rpx;
  line-height: 40rpx;
  color: #666;
}

.product .num{
  float: right;
}
.status{
  height: 100rpx;
}

.btn{
  float: right;
  margin-right: 20rpx;
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  border:1rpx solid #e2e2e2;
  color: #666;
}

.addr{
  height: 150rpx;
  background: #fff;
}

.addr .lt{
  float: left;
  width: 10%;
  text-align: center;
  font-size: 36rpx;
  line-height: 150rpx;
}
.addr .ct{
  float: left;
  width: 80%;
  margin-top: 20rpx;
  overflow: hidden;
}
.addr .ct view{
  width: 100%;
  height: auto;
  line-height: 40rpx;
  overflow: hidden;
}