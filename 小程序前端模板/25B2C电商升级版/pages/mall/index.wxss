.swiper {
  height: 360rpx;
}

.slide-image {
  width: 100%;
  height: 360rpx;
}

.swiper-box {
  height: 390rpx;
  background: #fff;
  margin-top: 20rpx;
}

.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal {
  padding-bottom: 10rpx;
}

.menu {
  height: auto;
  overflow: hidden;
  width: 100%;
  background: #fff;
  padding-top: 20rpx;
}

.menu .item {
  width: 25%;
  height: 150rpx;
  float: left;
  margin-top: 10rpx;
  text-align: center;
}

.menu .item image {
  height: 50rpx;
  width: 50rpx;
  display: block;
  float: left;
  margin-left: 25rpx;
  margin-top: 25rpx;
}

.menu .item .icon {
  height: 100rpx;
  width: 100rpx;
  margin: 0 auto;
  border-radius: 50rpx;
}

.menu .item  text {
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
  display: block;
  font-size: 26rpx;
}

.tjgds {
  width: 94%;
  height: auto;
  background: #fff;
  padding: 0 3%;
  margin-top: 15rpx;
  overflow: hidden;
}

.tjgds .title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  border-bottom: 1rpx #f5f5f5 solid;
}

.content {
  width: 100%;
  height: auto;
  overflow: hidden;
}

.content .list {
  width: 92%;
  height: auto;
  padding: 0 4%;
  margin-top: 20rpx;
}

.product {
  width: 96%;
  height: auto;
  margin-left: 2%;
  padding: 20rpx 0;
  display: inline-block;
}

.product .pro {
  width: 100%;
  height: auto;
  overflow: hidden;
  white-space: nowrap;
  float: left;
}

.product .pro .pitem {
  width: 300rpx;
  height: auto;
  background: #fff;
  display: inline-block;
  border: 1rpx #f5f5f5 solid;
  margin-right: 30rpx;
  margin-left: 30rpx;
}

.product .pro .pitem .thumb {
  width: 100%;
  height: 200rpx;
}

.product .pro .pitem .thumb image {
  width: 100%;
  height: 100%;
}

.product .pitem .pname {
  width: 96%;
  height: 70rpx;
  line-height: 35rpx;
  margin: 0 2%;
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #000;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box !important;
  word-break: break-all;
  white-space: pre-wrap;
}

.product .pitem .pinfo {
  width: 92%;
  height: 40rpx;
  line-height: 40rpx;
  margin: 0 4%;
  margin-top: 10rpx;
  overflow: hidden;
  display: inline-flex;
}

.product .pitem .pinfo .sprice {
  width: 160rpx;
  height: auto;
  text-align: left;
  float: left;
  font-size: 28rpx;
  color: #f00;
}

.product .pitem .pinfo .spay {
  width: auto;
  min-width: 160rpx;
  height: auto;
  text-align: right;
  float: right;
}

.product .pitem .pinfo .spay text {
  width: 40rpx;
  height: 40rpx;
  padding: 5rpx 0rpx;
  border-radius: 8rpx;
  color: #fff;
}

