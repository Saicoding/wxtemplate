/* pages/index/classifyList.wxss */

.app {
  width: 100%;
  height: auto;
}

.app .header {
  width: 100%;
  height: 80rpx;
}

.app .search {
  width: 84%;
  height: 60rpx;
  padding: 0 4%;
  margin: 0 4%;
  margin-top: 20rpx;
  border: 1rpx #fff solid;
  background: #fff;
  border-radius: 15rpx;
}

.app .search image {
  width: 30rpx;
  height: 30rpx;
  margin: 15rpx 0;
  float: left;
}

.app .search input {
  width: 90%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  margin-left: 10rpx;
  float: left;
}

.app .list {
  width: 100%;
  height: auto;
}

.app .list .listitem {
  width: 92%;
  height: auto;
  margin-top: 20rpx;
  padding: 20rpx 4%;
  background: #fff;
  overflow: hidden;
}

.app .list .listitem .face {
  width: 15%;
  height: auto;
  float: left;
  text-align: center;
}

.app .list .listitem .face image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.app .list .listitem .info {
  width: 83%;
  height: auto;
  padding-left: 2%;
  float: right;
  overflow: hidden;
}

.app .list .listitem .info .header {
  width: 100%;
  height: auto;
  display: inline-block;
}

.app .list .listitem .info .header .name {
  width: 57%;
  height: 30rpx;
  float: left;
  font-size: 28rpx;
  color: #000;
}

.app .list .listitem .info .header .lx {
  width: 20%;
  height: 30rpx;
  float: left;
  text-align: center;
}

.app .list .listitem .info .header .lx text {
  width: auto;
  height: auto;
  font-size: 22rpx;
  border: 1rpx #f5f5f5 solid;
  padding: 3rpx 8rpx;
  border-radius: 6rpx;
  color: #1296db;
}

.app .list .listitem .info .header .fw {
  width: 23%;
  height: 30rpx;
  float: right;
  text-align: center;
}

.app .list .listitem .info .header .fw text {
  width: auto;
  height: auto;
  font-size: 22rpx;
  background: #bfbfbf;
  padding: 3rpx 8rpx;
  border-radius: 6rpx;
  color: #1296db;
}

.app .list .listitem .info .content {
  width: 100%;
  height: auto;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  font-weight: normal;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
}

.listitem .info .imgs {
  width: 100%;
  height: 180rpx;
  margin-top: 20rpx;
  background: #f5f5f5;
}

.listitem .info .imgs .item {
  width: 30%;
  height: 180rpx;
  float: left;
  margin: auto 1.5%;
}

.listitem .info .address {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
}

.listitem .info .address image {
  width: 35rpx;
  height: 35rpx;
}

.listitem .info .address text {
  width: 100%;
  height: auto;
  font-size: 24rpx;
  margin-left: 5rpx;
  line-height: 30rpx;
  color: #8a8a8a;
}

.listitem .info .binfo {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 15rpx;
  display: flex;
}

.listitem .info .binfo .date {
  width: 50%;
  height: 40rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #8a8a8a;
  float: left;
}

.listitem .info .binfo .rinfo {
  width: 50%;
  height: 40rpx;
  line-height: 40rpx;
  float: left;
}

.listitem .info .binfo .rinfo .iteminfo {
  width: 31%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: left;
  float: left;
  margin-left: 2%;
}

.listitem .info .binfo .iteminfo image {
  width: 35rpx;
  height: 35rpx;
  margin: 5rpx 0;
  float: left;
}

.listitem .info .binfo .iteminfo text {
  float: left;
  margin-left: 5rpx;
  font-size: 22rpx;
  color: #8a8a8a;
}


.menu {
  height: auto;
  overflow: hidden;
  width: 100%;
  background: #fff;
  padding-top: 20rpx;
}

.menu .item {
  width: 25%;
  height: 150rpx;
  float: left;
  text-align: center;
}

.menu .item image {
  height: 40rpx;
  width: 40rpx;
  display: block;
  float: left;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.menu .item .icon {
  height: 80rpx;
  width: 80rpx;
  margin: 0 auto;
  border-radius: 40rpx;
}

.menu .item  text {
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
  display: block;
  font-size: 26rpx;
}

.app .banner {
  width: 92%;
  height: 240rpx;
  margin: 20rpx 4%;
  border-radius: 10rpx;
  position: relative;
}

.app .banner image {
  width: 100%;
  height: 240rpx;
  border-radius: 10rpx;
}

.app .banner text {
  width: auto;
  height: auto;
  position: absolute;
  bottom: 15rpx;
  right: 15rpx;
  color: #fff;
  font-size: 28rpx;
}

.app .tabmenu {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 20rpx;
  background: #fff;
}

.app .tabmenu .titem {
  width: 39.8%;
  height: 80rpx;
  float: left;
  margin: 0 5%;
  text-align: center;
  font-size: 28rpx;
  color: #000;
}

.app .tabmenu .vline {
  width: 2rpx;
  height: 40rpx;
  margin: 20rpx 0;
  float: left;
  background: #f5f5f5;
}

