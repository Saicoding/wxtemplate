/* pages/home/details.wxss */
page{
  background: #fff;
}

.app {
  width: 100%;
  height: auto;
  overflow: hidden;
  font-size: 26rpx;
  background: #fff;
  display: flex;
}

.app .details{
  width: 92%;
  height: auto;
  margin: 20rpx auto;
  background: #fff;
  overflow: hidden;
  margin-bottom: 130rpx;
}

.details .header{
  width: 100%;
  height: auto;
}

.header .title{
  font-size: 32rpx;
  font-weight: bold;
  color: #515151;
}

.header .date{
  font-size: 24rpx;
  color: #8a8a8a;
  margin-top: 20rpx;
}

.details .content{
  width: 100%;
  height: auto;
}

.details .content .t_con{
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #000;
}

.details .content .i_con{
  width: 100%;
  height: 320rpx;
  margin-top: 20rpx;
  align-items: center;
  background: #fff;
}

.details .content .i_con image{
  width: 100%;
  height: 320rpx;
}

.app .vbtn{
  width: 90%;
  height: 70rpx;
  bottom: 20rpx;
  margin: 0 5%;
  position: fixed;
}

.app .vbtn .btn_bj {
  width: 100%;
  height: 100%;
  bottom: 20rpx;
  background: #1ba8b9;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
