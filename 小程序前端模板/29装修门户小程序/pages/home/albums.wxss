.select{
  width: 100%;
  height: 80rpx;
  background: #fff;
  font-size: 26rpx;
  border-bottom: #e2e2e2 1rpx solid;  
  position: relative;
}

.select .item{
  width: 33.3%;
  float: left;
  height: 80rpx;
  text-align: center;
}
.select .item .cate{
  line-height: 80rpx;
  float: left;
  margin-left: 20%;
}

.select .item image{
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-left: 20rpx;
  margin-top: 25rpx;
}

.catelist{
  position: absolute;
  top: 82rpx;
  left: 0rpx;
  width: 100%;
  height: auto;
  overflow: hidden;
  z-index: 1000;
  background: #fff;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e2e2e2;
}
.catelist text{
  color: #000;
  font-size: 24rpx;
  border: 1rpx solid #f3f3f3;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  float: left;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.orderlist{
  position:  absolute;
  width: 33.3%;
  right: 0.1%;
  top:82rpx;
  text-align: center;
  background: #fff;
  padding-bottom: 20rpx;
  line-height: 40rpx;
  font-size: 24rpx;
    border-bottom: 1rpx solid #e2e2e2;

}
.orderlist view{
  border-bottom: 1rpx solid #f2f2f2;
  margin-top: 20rpx;
}

.photolist{
  height: auto;
  width: 100%;
}

.photolist .item{
  width: 45%;
  float: left;
  margin-left: 3%;
  background: #fff;
  position: relative; 
  padding-bottom: 10rpx;
  margin-top: 20rpx;
}
.photolist .item image{
  max-width: 96%;
  margin-left: 2%;
  margin-top: 10rpx;
  display: block;
}

.photolist .item text{
  position: absolute;
  left: 2%;
  bottom: 0;
  height: 40rpx;
  width: 96%; 
  color: #fff;
  font-size: 26rpx;
  background: rgba(0,0,0,.8);
  line-height: 40rpx;
  text-align: center;
  overflow: hidden;
}