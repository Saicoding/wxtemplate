/* pages/index/detail.wxss */

.app {
  width: 100%;
  height: auto;
  overflow: hidden;
  position: relative;
}

.swiper {
  height: 380rpx;
}

.slide-image {
  width: 100%;
  height: 380rpx;
}

.baseinfo{
  width: 92%;
  height: auto;
  padding: 10rpx 4%;
  border-bottom: 1rpx #f5f5f5 solid;
  background: #fff;
}

.baseinfo .name{
  width: 100%;
  height: auto;
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
}

.baseinfo .price{
  width: 100%;
  height: auto;
  font-size: 32rpx;
  color: #000;
  margin-top: 10rpx;
}

.app .yuyue {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  position: fixed;
  bottom: 0;
  background: #ff7f00;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
}

.rule{
  width: 92%;
  height: auto;
  padding: 10rpx 4%;
  background: #fff;
}

.rule .ritem{
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
}

.ritem .rtitle{
  font-size: 28rpx;
  color: #8a8a8a;
}

.ritem .rcontent{
  font-size: 28rpx;
  color: #000;
  margin-left: 20rpx;
}

.detail{
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  background: #fff;
}

.title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1rpx #f5f5f5 solid;
  background: #fff;
}

.htitle {
  font-size: 30rpx;
  font-weight: bold;
}

.detail image{
  width: 100%;
  height: 400rpx;
  margin: 5rpx 0;
}
