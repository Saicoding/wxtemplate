page{
  background: #f3f3f3; 
}

.app{
  font-size: 28rpx;
  height: auto; overflow: hidden;
  width: 100%;
}
.main {
  height: auto; overflow: hidden; width: 96%; margin: 0 auto; 
}

.icon_list{
  background: #fff;
  margin-top: 20rpx;
  border-radius: 20rpx;
}

.icon_list .title{
  height: 60rpx; line-height: 60rpx;
  border-bottom: 1rpx solid #e2e2e2;
  width: 98%;
  float: left;
  display: block;
  margin-left: 20rpx;
  margin-top: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.list {
  display: block;
   height: auto; overflow: hidden;
   font-size: 24rpx;
   width: 100%;
}

.icon{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f3f3f3;
}

.icon switch{
  float: right; margin-right: 20rpx;
   transform: scale(.8);
}

.icon text{
  float: left; margin-left: 20rpx;
}

.kongbai{
  height: 100rpx;
}

.btn{
  position: fixed;
  left: 2%;
  bottom: 0;
  height: 100rpx;
  background: #fff;
  z-index: 100;
  width: 96%;
}

.btn button{
  background: #000;color: #fff;
  height: 60rpx;
  line-height: 60rpx;
  width: 300rpx;
  margin: 0 auto; margin-top: 20rpx; 
}
