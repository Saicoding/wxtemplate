/* pages/information/index.wxss */

.list {
  width: 92%;
  height: auto;
  overflow: hidden;
  margin: 0 4%;
  margin-top: 20rpx;
  font-size: 28rpx;
}

.list .item {
  width: 100%;
  height: 460rpx;
  overflow: hidden;
  border-radius: 12rpx;
  position: relative;
  background: #fff;
  margin-bottom: 20rpx;
}

.list .item image {
  width: 97%;
  height: 370rpx;
  margin: 0 auto;
  border-radius: 12rpx 12rpx 0 0;
  padding: 10rpx 1.5%;
}

.list .hot{
  width: auto;
  height: auto;
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  border: 1rpx #f5f5f5 solid;
  border-radius: 12rpx;
  padding: 3rpx 10rpx;
  color: #f5f5f5;
}

.list .item .bottom {
  width: 96%;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  bottom: 0rpx;  
  color: #000;
  padding: 0 2%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  border-radius: 0 0 12rpx 12rpx;
}
