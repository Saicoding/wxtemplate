/* pages/mine/yuyue.wxss */

.item {
  width: 84%;
  height: auto;
  margin: 15rpx 4%;
  padding: 0 4%;
  background: #fff;
  overflow: hidden;
  box-shadow: 2px 2px 1px #eaeaea;
}

.item .title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}

.item .title .name {
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 22rpx;
  float: left;
  color: #8a8a8a;
}

.item .title .state {
  width: auto;
  height: 60rpx;
  float: right;
  font-size: 28rpx;
  color: #f00;
}

.item .time {
  width: 100%;
  height: auto;
  font-size: 22rpx;
  color: #8a8a8a;
}

.ncont, .tcont {
  font-size: 26rpx;
  color: #000;
}

.item .content {
  width: 100%;
  height: auto;
  margin: 20rpx 0;
  border-top: 1rpx #f5f5f5 solid;
  overflow: hidden;
}

.item .content .lt {
  width: 49.9%;
  height: auto;
  float: left;
  margin-top: 15rpx;
}

.item .content .hline {
  width: 0.2%;
  height: 60rpx;
  background: #f5f5f5;
  float: left;
  margin-top: 30rpx;
}

.item .content .rt {
  width: 49.9%;
  height: auto;
  float: right;
  margin-top: 15rpx;
}

.ctit {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #8a8a8a;
}

.cinfo {
  width: 100%;
  text-align: center;
  font-size: 34rpx;
  margin: 15rpx 0;
  color: #f00;
}

.item .bottom {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}

.item .bottom .cancel {
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  margin: 20rpx 0;
  border: 1rpx #f5f5f5 solid;
  padding: 5rpx 30rpx;
  border-radius: 10rpx;
  float: right;
}
