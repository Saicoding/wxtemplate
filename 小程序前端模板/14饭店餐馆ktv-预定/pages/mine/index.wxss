/* pages/mine/index.wxss */
.header{
  width: 100%;
  height: 280rpx;
  position: relative;
  text-align: center;
}

.header .face{
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  border: 5rpx #fff solid;
  margin: 20rpx auto;
}

.header .nickname{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 28rpx;
}

.items{
  width: 92%;
  height: auto;
  background: #fff;
  margin-top: 20rpx;
  padding: 0 4%;
}

.items .col{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx #f5f5f5 solid;
}

.col image{
  width: 40rpx;
  height: 40rpx;
  margin: 30rpx 0;
  float: left;
}

.col .name{
  width: auto;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #000;
}

.col .arrow{
  width: 40rpx;
  height: 40rpx;
  float: right;
  text-align: right;
}