/* pages/index/receive.wxss */

.header {
  width: 100%;
  height: 220rpx;
  text-align: center;
}

.header image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-top: 10rpx;
  border: 3rpx #fff solid;
}

.header .name {
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 28rpx;
}

.contview {
  width: 92%;
  height: auto;
  margin: 20rpx 4%;
  background: #fff;
  box-shadow: 2px 2px 1px #eaeaea;
  border-radius: 8rpx;
}

.contview .top {
  width: 92%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  padding: 0 4%;
  color: #8a8a8a;
  border-bottom: 1rpx #f5f5f5 solid;
}

.contview .top .lt {
  width: auto;
  height: auto;
  float: left;
}

.contview .top .rt {
  width: auto;
  height: auto;
  float: right;
  color: #f00;
}

.contview .bottom {
  width: 92%;
  height: auto;
  padding: 20rpx 4%;
  overflow: hidden;
  display:  inline-block;
}

.contview .bottom .block {
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  border: 1rpx #f5f5f5 solid;
  text-align: center;
  float: left;
  margin: 10rpx;
}

.contview .bottom .selblock {
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  text-align: center;
  border: 1rpx #99499C solid;
  float: left;
  color:#fff;
  background: #99499C;
  margin: 10rpx;
}

.contview .bottom .lctb {
  width: 49.9%;
  height: auto;
  float: left;
  text-align: center;
}

.contview .bottom .hline {
  width: 0.2%;
  height: 40rpx;
  float: left;
  background: #f5f5f5;
  margin-top: 45rpx;
}

.contview .bottom .rctb {
  width: 49.9%;
  height: auto;
  float: right;
  text-align: center;
}

.abtitle {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #8a8a8a;
}

.atime {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  color: #000;
}

.contview .bottom .name {
  width: 96%;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 2%;
  border-bottom: 1rpx #f5f5f5 solid;
}

.contview .bottom .phone {
  width: 96%;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 10rpx;
  padding: 0 2%;
}

.yuyue {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 30rpx 10%;
  background: #99499c;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}
