/**相关评论**/

.comment {
  width: 100%;
  height: auto;
  margin: 30rpx 0;
}

.comment_item {
  width: 100%;
  height: auto;
  margin-top: 30rpx;
  display: flex;
}

.comment .face_view {
  margin-top: 20rpx;
  width: 80rpx;
}

.comment .face_view image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100px;
  border: 2px solid #fff;
  overflow: hidden;
}

.comment .comment_lp {
  width: 100%;
  height: auto;
  display: block;
  margin: 10rpx 20rpx;
}

.comment .comment_lp .header {
  width: 100%;
  height: auto;
  display: flex;
}

.comment .comment_lp .header .user_name {
  width: 80%;
  height: auto;
  float: left;
  font-size: 26rpx;
  color: #4682B4;
}

.comment .comment_lp .header .zan {
  width: 20%;
  height: auto;
  float: left;
  display: flex;
  align-items: center;
}

.comment .comment_lp .header .zan image {
  width: 30rpx;
  height: 30rpx;
  float: left;
}

.comment .comment_lp .header .zan text {
  width: auto;
  height: auto;
  margin-left: 10rpx;
  float: left;
  color: #515151;
}

.comment .comment_lp .content {
  margin: 12rpx 0;
  font-size: 28rpx;
  line-height: 38rpx;
  color: #000;
}

.comment .comment_lp .bottom{
  width: 100%;
  height: auto;
  display: flex;
}

.comment .comment_lp .date{
  width: 85%;
  height: auto;
  float: left;
  font-size: 24rpx;
}

.comment .comment_lp reply{
  width: 15%;
  height: auto;
  float: left;
}

.comment .comment_lp image{
  width: 25rpx;
  height: 25rpx;
  float: left;
}
.nomore{
  height: 80rpx; line-height: 80rpx;
  text-align: center;
  font-size: 26rpx; color: #ccc;  
  background: #fff; 
}

