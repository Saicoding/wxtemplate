/* pages/classify/index.wxss */

.product {
  height: auto;
  overflow: hidden;
  width: 100%;
}

.product .cat {
  width: 25%;
  float: left;
  max-height: 1000rpx;
  overflow-y: scroll;
  scroll-y: false;
  background: #f3f3f3;
}

.product .cat .on {
  background: #fff;
}

.product .cat .item {
  width: 90%;
  padding: 0 5%;
  line-height: 40rpx;
  height: 80rpx;
  position: relative;
  align-items: center;
  justify-content: center;
  display: flex;
}

.product .goods {
  width: 75%;
  float: left;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.product .goods .item {
  height: auto;
  overflow: hidden;
  width: 96%;
  margin: 0 auto;
}

.goods .item .tit {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-top: 15rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.goods .item .tit text {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}

.goods .item .gd {
  width: 160rpx;
  height: auto;
  overflow: hidden;
  margin-top: 15rpx;
  float: left;
  text-align: center;
}

.goods .item .gd .thumb {
  width: 80%;
  margin: 0 10%;
  height: 120rpx;
  border-radius: 10rpx;
  float: left;
}

.goods .item .gd .thumb  image {
  height: 80%;
  width: 80%;
  margin: 10%;
  border-radius: 10rpx;
}

.goods .item .gd .cname {
  width: 100%;
  height: auto;
  display: flex;
  padding: 5rpx 0;
  font-size: 26rpx;
  color: #000;
  justify-content: center;
}
