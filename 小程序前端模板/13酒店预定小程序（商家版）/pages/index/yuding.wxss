/* pages/index/yuding.wxss */

.app {
  width: 100%;
  height: auto;
  overflow: hidden;
  font-size: 26rpx;
}

.app .type {
  width: 92%;
  padding: 0 4%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #000;
  background: #fff;
  border-bottom: 1rpx #f5f5f5 solid;
}

.app .detail {
  width: 92%;
  padding: 20rpx 4%;
  height: auto;
  font-size: 28rpx;
  color: #000;
  background: #fff;
}

.app .detail .title {
  font-size: 26rpx;
  color: 1C86EE;
}

.app .detail .date {
  font-size: 26rpx;
  margin-top: 6rpx;
}

.app .bview {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
}

.app .bview .lt {
  width: 68%;
  height: 100rpx;
  float: left;
  line-height: 100rpx;
  padding-left: 2%;
  font-size: 32rpx;
  color: #f00;
}

.app .bview .rt {
  width: 30%;
  height: 100rpx;
  float: right;
  background: #218868;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}

.app .fitem {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  border-bottom: 1rpx #f5f5f5 solid;
}

.app .fitem .title {
  width: 26%;
  padding: 0 4%;
  float: left;
  font-size: 28rpx;
  color: #8a8a8a;
}

.app .fitem .fnum {
  width: 56%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  float: left;
  color: #000;
}

.app .fitem image {
  width: 40rpx;
  height: 40rpx;
  padding-top: 30rpx;
  margin-right: 4%;
  text-align: right;
}

.margin_top_15 {
  margin-top: 15rpx;
}

.app .cancel_info {
  width: 92%;
  padding: 0 4%;
  padding-top: 50rpx;
  font-size: 28rpx;
  color: #515151;
}

.couponapp{
  font-size: 24rpx;
}

.bushiyong{
  width: 96%;
  margin: 0 auto;
  background: #fff;
  border: 1rpx solid #e2e2e2;
  height: 100rpx;
  line-height: 100rpx; 
  margin-top: 30rpx;
}

.bushiyong text{
  float: left; margin-left: 20rpx; font-size: 36rpx;
  color: #999; 
}
.bushiyong image{
  float: right; margin-right: 30rpx;
  height: 50rpx;
  width: 50rpx;
  margin-top: 20rpx;
}

.coupon{
  width: 96%; margin: 0 auto; height:220rpx; background: #fff;
  margin-top: 20rpx; 
  position: relative;
}
.coupon .bg{
  width: 100%;  
  height: 220rpx;
 
}
.coupon .datas{
  position: absolute; top: 0;left: 0;
}
.coupon .dian{
  position: absolute;
  height: 20rpx;
  width: 20rpx; 
  top: 150rpx;
  left: -10rpx;

}
.coupon .on{
  color:#fd2055;
}
.coupon .off{
  color: #999;
}


.coupon .lt{
  float: left; line-height: 200rpx;
  width: 160rpx; margin-left: 40rpx;
  font-size: 48rpx;

}
.coupon .lt text{
  font-size: 26rpx;
}

.coupon .ct{
  float: left;
  width: 400rpx;
  margin-left: 20rpx;
  margin-top: 30rpx;
}
.coupon .ct .title{
  font-size: 38rpx;
  color: #000;
  display: block;
}

.coupon .ct text{
  display: block;
  width: 100%; margin-top: 10rpx;
  color: #ccc;
}
.coupon .rt {
  position: absolute;right: 0rpx;
  top:0rpx;
  height: 200rpx; line-height: 200rpx;
  text-align: center;
}

.coupon .rt .on{
   background:  #fd2055;
   padding: 10rpx; font-size: 26rpx;
   color: #fff;
   border-radius: 5rpx;
}

.coupon .rt .off{
   background:  #ccc;
   padding: 10rpx; font-size: 26rpx;
   color: #fff;
   border-radius: 5rpx;
}
