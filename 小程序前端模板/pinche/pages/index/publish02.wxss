/* pages/index/publish02.wxss */
.header {
  width: 92%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 4%;
  font-size: 28rpx;
  color: #515151;
}

.contact {
  width: 92%;
  height: auto;
  line-height: 80rpx;
  background: #fff;
  padding: 0 4%;
}

.contact .col {
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx #f5f5f5 solid;
}

.col .lt {
  width: 23%;
  height: 80rpx;
  font-size: 26rpx;
  color: #000;
  float: left;
}

.col .mt {
  width: 68%;
  height: 80rpx;
  float: left;
  padding: 0 1%;
  font-size: 26rpx;
  color: #000;
}

.col input {
  width: 100%;
  height: 80rpx;
  min-width: 68%;
  line-height: 80rpx;
}

.col .rt {
  width: 7%;
  height: 80rpx;
  float: right;
  text-align: right;
}

.col .rt image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx 0;
}

.remarks {
  width: 92%;
  height: 180rpx;
  padding: 15rpx 4%;
  background: #fff;
}

.publish{
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 10%;
  margin-top: 50rpx;
  background: #25b83d;
  color: #fff;
}