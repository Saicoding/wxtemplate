.game{
  height: 80rpx;
  background: #fff;
  width: 100%;
  text-align: center;
  border-bottom: 1rpx #f3f3f3 solid;
}

.game .cat{
  width: 30%;  margin-left: 40%; height: 80rpx;
}
.game .tubiao{
  width: 40rpx; height: 40rpx;margin-top: 20rpx;float: left; margin-right: 6rpx;
}

.game text{
  font-size: 24rpx; line-height: 80rpx;float: left;
}
.game .jiantou{
  width: 24rpx; height:24rpx;float: left; margin-top: 28rpx; margin-left: 6rpx;
  opacity: 0.5; 
}

.item{
  width: 100%;
  height: 400rpx;
  margin-top: 20rpx;
  position: relative;
}
.item .banner{
  width: 100%;
  height: 400rpx;
}
.item .title{
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(0,0, 0, .8);
  color: #fff;
  position: absolute;bottom: 0;left: 0;
  font-size: 28rpx;
  width: 100%;
}
.item .look{
  position: absolute;
  right: 0;
  top: 30rpx;
  height: 40rpx;
  background:  rgba(0,0, 0, .7);
  color: #fff;
  font-size: 24rpx;
  line-height: 40rpx;
  border-radius: 10rpx;
}
.item .look image{
  width: 40rpx;
  height: 40rpx;
  float: left;
}

.tag{
  height: auto;
  width: 100%;
  margin-top: 20rpx;
}

.tag .title{
    width: 60%;
    padding-left: 2%;
    font-size: 26rpx;
    border-left: 2rpx solid #31abf8;
}

.tags{
  width: 90%;
  margin-left: 5%;
  height: auto;
  overflow: hidden;
}
.tags .tg{
   padding: 10rpx;
   float: left;
   font-size: 24rpx;
   border: 1rpx #f3f3f3 solid;
   border-radius: 10rpx;
   margin-top: 10rpx;
   margin-left: 10rpx;
}