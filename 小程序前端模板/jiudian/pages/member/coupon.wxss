page {
  background: #f3f3f3;
}

.app {
  font-size: 26rpx;
  width: 100%;
  height: auto;
  overflow: hidden;
}

.menu {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-bottom: solid 1rpx #f4f5f6;
}

.menu text {
  float: left;
  width: 25%;
  font-size: 30rpx;
  height: 90%;
  text-align: center;
}

.menu text.active {
  color: #07b7ce;
  border-bottom: 5rpx solid #07b7ce;
}

.coupon {
  width: 96%;
  margin: 0 auto;
  height: 220rpx;
  background: #fff;
  margin-top: 20rpx;
  position: relative;
}

.coupon .bg {
  width: 100%;
  height: 220rpx;
}

.coupon .datas {
  position: absolute;
  top: 0;
  left: 0;
}

.coupon .dian {
  position: absolute;
  height: 20rpx;
  width: 20rpx;
  top: 150rpx;
  left: -10rpx;
}

.coupon .on {
  color: #fd2055;
}

.coupon .off {
  color: #999;
}

.coupon .lt {
  float: left;
  line-height: 200rpx;
  width: 100rpx;
  margin-left: 40rpx;
  font-size: 48rpx;
}

.coupon .lt text {
  font-size: 26rpx;
}

.coupon .ct {
  float: left;
  width: 400rpx;
  margin-left: 20rpx;
  margin-top: 30rpx;
}

.coupon .ct .title {
  font-size: 38rpx;
  color: #000;
  display: block;
}

.coupon .ct text {
  display: block;
  width: 100%;
  margin-top: 10rpx;
  color: #ccc;
}

.coupon .rt {
  float: right;
  margin-right: 20rpx;
  height: 200rpx;
  line-height: 200rpx;
}

.coupon .rt .on {
  background: #fd2055;
  padding: 10rpx;
  font-size: 26rpx;
  color: #fff;
  border-radius: 5rpx;
}

.coupon .rt .off {
  background: #ccc;
  padding: 10rpx;
  font-size: 26rpx;
  color: #fff;
  border-radius: 5rpx;
}

.nomore {
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1px solid #f3f3f3;
  text-align: center;
  font-size: 26rpx;
  color: #ccc;
  background: #fff;
}

.more {
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1px solid #f3f3f3;
  text-align: center;
  font-size: 26rpx;
  color: #1ba8b9;
  background: #fff;
}

.nodata {
  height: 400rpx;
  width: 100%;
}

.nodata image {
  height: 200rpx;
  width: 200rpx;
  display: block;
  margin: 0 auto;
  margin-top: 50rpx;
}

.nodata text {
  display: block;
  margin: 0 auto;
  margin-top: 20rpx;
  color: #1ba8b9;
  font-size: 28rpx;
  text-align: center;
}
