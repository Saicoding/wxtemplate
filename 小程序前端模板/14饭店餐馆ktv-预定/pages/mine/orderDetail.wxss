/* pages/mine/reserve.wxss */

.item {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
}

.item .baseinfo {
  width: 92%;
  height: 120rpx;
  padding: 20rpx 4%;
  overflow: hidden;
  background: #fff;
  border-bottom: 1rpx #f5f5f5 solid;
}

.item .baseinfo .lt {
  width: 25%;
  height: 120rpx;
  float: left;
}

.item .baseinfo .lt .thumb {
  width: 140rpx;
  height: 120rpx;
}

.item .baseinfo .rt {
  width: 75%;
  height: 120rpx;
  float: right;
}

.item .baseinfo .rt .title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  margin-top: 5rpx;
  color: #000;
}

.item .baseinfo .rt .uprice {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
}

.item .baseinfo .rt .uprice text {
  font-size: 32rpx;
  margin: 0 8rpx;
}

.item .orderinfo {
  width: 92%;
  height: auto;
  padding: 20rpx 4%;
  border-bottom: 1rpx #f5f5f5 solid;
  background: #fff;
}

.item .orderinfo .state, .item .orderinfo .num {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #8a8a8a;
}

.detail {
  width: 92%;
  height: auto;
  padding: 15rpx 4%;
  background: #fff;
}

.detail .ditem {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}

.ititle {
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  font-size: 28rpx;
  color: #000;
}

.icontent {
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  float: right;
  font-size: 28rpx;
  color: #8a8a8a;
}

.hongbao {
  width: 92%;
  height: 80rpx;
  padding: 0 4%;
  margin-top: 20rpx;
  background: #fff;
}

.hongbao .name {
  width: auto;
  line-height: 80rpx;
  float: left;
}

.hongbao .content {
  width: auto;
  line-height: 80rpx;
  float: right;
  margin-right: 10rpx;
  color: #8a8a8a;
}

.hongbao image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx 0;
  float: right;
}

.payinfo {
  width: 92%;
  height: auto;
  padding: 0 4%;
  margin-top: 20rpx;
  background: #fff;
}

.payinfo .pitem{
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx #f5f5f5 solid;
}

.payinfo .ptitle{
  width: auto;
  height: 80rpx;
  line-height: 80rpx;
  float: left;
}

.payinfo .pcontent{
  width: auto;
  height: 80rpx;
  line-height: 80rpx;
  float: right;
  margin-right: 10rpx;
}

.pay{
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 40rpx 10%;
  text-align: center;
  background: #66CDAA;
  color: #fff;
  border-radius: 10rpx;
}