.app {
  width: 100%;
  height: 100%;
}

.app .input_container{
  width: 85%;
  margin: 20rpx 20rpx;
}

.app .input_container .input{
  width: 100%;
  margin: 20rpx 20rpx;
  font-family: "微软雅黑";
  font-size: 28rpx;
  padding: 20rpx 20rpx;
  color: #000;
  border-color: #DEDEDE;
  border-radius: 20rpx;
  border-width: 2rpx;
  border-style:  solid;
  overflow: auto;
  word-break: break-all;
}

.btn{
  background: #1ba8b9;
  color: #fff;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 60rpx;
}
