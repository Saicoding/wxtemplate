/* pages/mine/order.wxss */

.item {
  width: 92%;
  height: auto;
  padding: 20rpx 4%;
  background: #fff;
  margin-top: 15rpx;
}

.item .header {
  width: auto;
  height: 80rpx;
  border-bottom: 1rpx #f5f5f5 solid;
  padding-bottom: 20rpx;
  position: relative;
}

.item .header .tag {
  width: auto;
  height: auto;
  position: absolute;
  background: #f00;
  top: 0;
  right: 0;
  padding: 5rpx 15rpx;
  font-size: 26rpx;
  color: #fff;
  border-radius: 10rpx;
}

.item .header view {
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #000;
}

.item .info {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
}

.item .info view {
  width: 100%;
  height: auto;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #000;
  margin-top: 10rpx;
}

.item .info .date{
  width: 100%;
  height: auto;
  text-align: right;
  color: #515151;
  font-size: 26rpx;
}
