/* pages/member/userInfo.wxss */
.app {
  width: 100%;
  height: auto;
  font-size: 26rpx;
  overflow: hidden;
}

.app .uinfo{
  width: 100%;
  height: 260rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.app .uinfo .content{
  width: auto;
  height: auto;
  overflow: hidden;
}

.app .uinfo .content .face{
  width: 140rpx;
  height: 140rpx;
  background: #fff;
  border-radius: 70rpx;
}

.app .uinfo .content .face image{
  width: 136rpx;
  height: 136rpx;
  margin: 2rpx 2rpx;
  border-radius: 68rpx;
  text-align: center;

}

.app .uinfo .content .nickname{
  width: 100%;
  font-size: 28rpx;
  text-align: center;
  margin-top: 10rpx;
  color: #fff;
}

.col {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  border-bottom: 1rpx #f5f5f5 solid;
}

.top_20{
  margin-top: 20rpx;
}

.col .lt {
  width: 30%;
  float: left;
  font-size: 26rpx;
  text-align: center;
}

.col .rt {
  width: 68%;
  float: right;
  height: 100rpx;
  font-size: 28rpx;
  padding-left: 2%;
  line-height: 100rpx;
}

.btn_save {
  width: 70%;
  height: 80rpx;
  margin: 30rpx 15%;
  background: #1c86ee;
  color: #fff;
  font-size: 28rpx;
  padding: 5rpx 0; 
}