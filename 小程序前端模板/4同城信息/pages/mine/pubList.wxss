.app .listitem {
  width: 92%;
  height: auto;
  margin-top: 20rpx;
  padding: 20rpx 4%;
  background: #fff;
  overflow: hidden;
}

.app .listitem .face {
  width: 15%;
  height: auto;
  float: left;
  text-align: center;
}

.app .listitem .face image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.app .listitem .info {
  width: 83%;
  height: auto;
  padding-left: 2%;
  float: right;
  overflow: hidden;
}

.app .listitem .info .header {
  width: 100%;
  height: auto;
  display: inline-block;
}

.app .listitem .info .header .name {
  width: 43%;
  height: 30rpx;
  float: left;
  font-size: 28rpx;
  color: #000;
}

.app .listitem .info .header .lx {
  width: 20%;
  height: 30rpx;
  float: right;
  text-align: center;
}

.app .listitem .info .header .lx text {
  width: auto;
  height: auto;
  font-size: 22rpx;
  border: 1rpx #f5f5f5 solid;
  padding: 3rpx 8rpx;
  border-radius: 6rpx;
  color: #1296db;
}

.app .listitem .info .header .fw {
  width: 23%;
  height: 30rpx;
  float: right;
  text-align: center;
}

.app .listitem .info .header .fw text {
  width: auto;
  height: auto;
  font-size: 22rpx;
  background: #bfbfbf;
  padding: 3rpx 8rpx;
  border-radius: 6rpx;
  color: #1296db;
}

.app .listitem .info .header .zd {
  width: 13%;
  height: 30rpx;
  float: right;
  text-align: center;
}

.app .listitem .info .header .zd text {
  width: auto;
  height: auto;
  font-size: 22rpx;
  background: #bfbfbf;
  padding: 3rpx 8rpx;
  border-radius: 6rpx;
  color: #fff;
}

.app .listitem .info .content {
  width: 100%;
  height: auto;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  font-weight:  normal;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
}

.listitem .info .imgs{
  width: 100%;
  height: 180rpx;
  margin-top: 20rpx;
  background: #f5f5f5;
}

.listitem .info .imgs .item{
  width: 30%;
  height: 180rpx;
  float: left;
  margin: auto 1.5%;
}

.listitem .info .address{
  width: 100%;
  height: auto;
  margin-top: 20rpx;
}

.listitem .info .address image{
  width: 35rpx;
  height: 35rpx;
}

.listitem .info .address text{
  width: 100%;
  height: auto;
  font-size: 24rpx;
  margin-left: 5rpx;
  line-height: 30rpx;
  color: #8a8a8a;
}

.listitem .info .binfo{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 15rpx;
  display: flex;
}

.listitem .info .binfo .date{
  width: 50%;
  height: 40rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #8a8a8a;
  float: left;
}

.listitem .info .binfo .rinfo{
  width: 50%;
  height: 40rpx;
  line-height: 40rpx;
  float: left;
}

.listitem .info .binfo .rinfo .iteminfo{
  width: 31%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: left;
  float: left;
  margin-left: 2%;
}

.listitem .info .binfo .iteminfo image{
  width: 35rpx;
  height: 35rpx;
  margin: 5rpx 0; 
  float: left;
}

.listitem .info .binfo .iteminfo text{
  float: left;
  margin-left: 5rpx;
  font-size: 22rpx;
  color: #8a8a8a;
}